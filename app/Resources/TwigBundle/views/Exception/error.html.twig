{# Error page #}
{% extends ':frontbundle/layouts:_page_simple.html.twig' %}

{% block pageTitle %}
    <h1 class="page-title">
        {% block errorPageTitle %}
            {% trans %} error-page_general-page-title {% endtrans %}
        {% endblock %}
    </h1>
{% endblock %}

{% block pageAsideBody %}
    <div class="page-aside-body hide-xs hide-sm c-p1" style="text-align: center">
        {{ svgimage('#misc-mapcompass', 'Error', 500, 500)|raw }}
    </div><!-- /.page-aside-body -->
{% endblock %}

{% block pageContentBody %}
    <section class="page-section">
        <h2>
            {% block errorTitle %}
                {% trans %} error-page_general-title {% endtrans %}
            {% endblock %}
        </h2>
        {% block errorDetails %}
            {{ 'error-page_general-details'|trans|raw }}
        {% endblock %}
        <br>
        <div class="btn-toolbar text-align-left">
            <a href="{{ path('home') }}" class="btn-primary">{% trans %} error-page_button-home-page {% endtrans %}</a>
        </div><!-- /.btn-toolbar -->
    </section><!-- /.page-section -->
{% endblock %}
