{% extends 'layouts/_layout.html.twig' %}

{% block siteHeader %}
    {% include 'borrower_account/connected_header_borrower.html.twig' %}
{% endblock %}

{% block siteContent %}
    <article{% if page.id is not empty %} id="{{ page.id }}"{% endif %} class="dashboard{% if page.classNames is not empty %} {{ page.classNames }}{% endif %}">
        <div class="dashboard-inner">
            <div class="site-wrap">
                <div class="col-menu">
                    <nav class="dashboard-nav">
                        {% block dashboardNav %}
                            <ul>
                                <li role="presentation" class="dashboard-nav-dashboard{% if app.request.get('_route') == 'borrower_account_projects' or app.request.get('_route') == 'borrower_account_new_demand' %} active{% endif %}"><a href="{{ path('borrower_account_projects') }}"><span class="icon fa-project-u"></span><span class="label">{{ 'borrower-account-nav_your-projects'|trans }}</span></a></li>
                                <li role="presentation" class="dashboard-nav-operations{% if app.request.get('_route') == 'borrower_account_operations' %} active{% endif %}"><a href="{{ path('borrower_account_operations') }}"><span class="icon fa-operations-u"></span><span class="label">{{ 'borrower-account-nav_your-operations'|trans }}</span></a></li>
                                <li role="presentation" class="dashboard-nav-profile{% if app.request.get('_route') == 'borrower_account_profile' %} active{% endif %}"><a href="{{ path('borrower_account_profile') }}"><span class="icon fa-profile-u"></span><span class="label">{{ 'borrower-account-nav_profile'|trans }}</span></a></li>
                                <li role="presentation" class="dashboard-nav-contact{% if app.request.get('_route') == 'borrower_account_contact' %} active{% endif %}"><a href="{{ path('borrower_account_contact') }}"><span class="icon fa-pen-u"></span><span class="label">{{ 'borrower-account-nav_contact'|trans }}</span></a></li>
                                <li role="presentation" class="dashboard-nav-faq"><a href="{{ faq_url }}" target="_blank"><span class="icon fa-question-circle-o"></span><span class="label">{{ 'borrower-account-nav_faq'|trans }}</span></a></li>
                            </ul>
                        {% endblock %}
                    </nav>
                </div><!-- /.col-menu -->
                <div class="col-content dashboard-content">
                    {% block dashboardContent %} {% endblock %}
                </div><!-- /.col-content -->
            </div><!-- /.site-wrap -->
        </div><!-- /.dashboard-inner -->
    </article><!-- /.dashboard -->
{% endblock %}
