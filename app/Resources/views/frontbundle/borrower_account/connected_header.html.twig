<header class="site-header site-header-dashboard">
    <div class="site-band"></div>

    <div class="site-header-inner">
        <div class="site-wrap">
            <h1 class="site-title">
                <a href="{{ path('home') }}" class="site-logo" tabindex="2">{{ site.title|default('Unilend') }}</a>
            </h1>

            {% block siteHeaderNav %}
                {% include 'partials/header_nav.html.twig' %}
            {% endblock siteHeaderNav %}

            <div class="site-controls">
                {% block siteHeaderControls %}
                    {% include 'partials/site_search.html.twig' %}

                    <div class="site-user">
                        <div class="site-user-profile">
                            <div class="profile-avatar">
                                <a href="{{ path('borrower_account_projects') }}">{{ app.user.initials }}</a>
                            </div><!-- /.profile-avatar -->

                            <div class="profile-name">{% trans with {'%firstName%' : app.user.getPrenom()} %} borrower-header_greeting {% endtrans %}</div>

                            <div class="profile-balance">
                                <span>{% trans with {'%balance%' : balance(app.user)|localizedcurrency('EUR')} %} header-connected_balance {% endtrans %}</span>
                            </div><!-- /.profile-balance -->

                            <a href="{{ path('logout') }}" class="profile-logout link"><span class="label">{{ 'borrower-header_logout'|trans }}</span></a>

                            <a href="{{ path('borrower_account_projects') }}" class="site-user-mobile-menu-toggle" data-site-user-menu-toggle>
                                <span class="icon fa-ellipsis-v"></span>
                                <span class="sr-only">Open user menu</span>
                            </a>

                        </div><!-- /.site-user-profile -->
                    </div><!-- /.site-user -->
                {% endblock %}
            </div><!-- /.site-controls -->
        </div><!-- /.site-wrap -->
    </div><!-- /.site-header-inner -->
</header>
