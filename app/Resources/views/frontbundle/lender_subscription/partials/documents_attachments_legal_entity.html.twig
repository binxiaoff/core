{% do form.housedByThirdPerson.setRendered %}
<fieldset class="panel">
    <h3 class="h3">{% trans %} lender-subscription_section-name-id-documents {% endtrans %}</h3>

    <div class="message-info">
        <p>{% trans %} lender-subscription_documents-accepted-attachment-formats {% endtrans %}</p>
    </div><!-- /.message-info -->

    <div class="row">
        <div class="form-field">
            <label>
                {% trans %} lender-subscription_documents-legal-entity-identity-attachments-title {% endtrans %}
                <span class="field-required">*<span class="sr-only"> {% trans %} common_mandatory-field {% endtrans %}</span></span>
            </label>

            <div class="form-field">
                <div class="custom-input-file" id="form-lender-subscription-info-file-company-registration"
                     data-formvalidation-input
                     data-formvalidation-required='input[type="file"][name="company-registration"]'
                     data-fileattach
                     data-fileattach-inputname="company-registration"
                     data-fileattach-maxfiles="1"
                     data-fileattach-emptyfilelabel="{% trans %} lender-subscription_documents-legal-entity-company-registration {% endtrans %}">
                </div><!-- /.ui-fileattach -->
            </div><!-- /.form-field -->

            {% if company.statusClient > constant('\\Unilend\\Bundle\\CoreBusinessBundle\\Entity\\Companies::CLIENT_STATUS_MANAGER') %}
            <div class="form-field">
                <div class="custom-input-file" id="form-lender-subscription-info-file-delegation-authority"
                     data-fileattach
                     data-fileattach-inputname="delegation-of-authority"
                     data-fileattach-maxfiles="1"
                     data-fileattach-emptyfilelabel="{% trans %} lender-subscription_documents-legal-entity-delegation-of-authority {% endtrans %}">
                </div><!-- /.ui-fileattach -->
            </div><!-- /.form-field -->
            {% endif %}

            <div class="form-field">
                <div class="custom-input-file" id="form-lender-subscription-info-file-director-cni-1"
                     data-fileattach data-fileattach-inputname="id_recto"
                     data-fileattach-maxfiles="1"
                     data-formvalidation-input data-formvalidation-required='input[type="file"][name="id_recto"]'
                     data-fileattach-emptyfilelabel="{% trans %} lender-subscription_documents-legal-entity-director-ID-recto {% endtrans %}">
                </div><!-- /.ui-fileattach -->
            </div><!-- /.form-field -->

            <div class="form-field">
                <div class="custom-input-file" id="form-lender-subscription-info-file-director-cni-2"
                     data-fileattach data-fileattach-inputname="id_verso"
                     data-fileattach-maxfiles="1"
                     data-fileattach-emptyfilelabel="{% trans %} lender-subscription_documents-legal-entity-director-ID-verso {% endtrans %}">
                </div><!-- /.ui-fileattach -->
            </div><!-- /.form-field -->
        </div>
    </div>

    <div class="row">
        <div class="form-field">
            <label for="form-preter-fichier-identity">
                {% trans %} lender-subscription_documents-rib {% endtrans %}
                <span class="field-required">*<span class="sr-only"> {% trans %} common_mandatory-field {% endtrans %}</span></span>
            </label>

            <div class="custom-input-file" id="form-preter-file-file-rib"
                 data-formvalidation-input
                 data-formvalidation-required='input[type="file"][name="rib"]'
                 data-fileattach
                 data-fileattach-inputname="rib"
                 data-fileattach-maxfiles="1"></div><!-- /.ui-fileattach -->

            <ul class="ui-formvalidation-messages"></ul>

            <div class="field-help">
                <p>{% trans %} lender-subscription_documents-rib-info {% endtrans %}</p>
            </div>
        </div><!-- /.form-field -->
    </div>

</fieldset>