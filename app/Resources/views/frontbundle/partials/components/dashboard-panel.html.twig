{# Dashboard Panel #}

<article class="{% block panelClassNames %}dashboard-panel{% endblock %}" {% block panelAttributes %}{% endblock %}>
  <header class="dashboard-panel-header">
    {% block panelHeader %}
      <h3 class="dashboard-panel-title">{% block panelTitle %}{% endblock %}</h3>
      <div class="dashboard-panel-controls">
        {% block panelControls %}{% endblock %}
        {% block panelClose %}
          <a href="javascript:;" class="btn-close"><span class="sr-only">{% trans %} lender-dashboard_close-panel-button {% endtrans %}</span></a>
        {% endblock %}
      </div>
    {% endblock %}
  </header>
  <div class="dashboard-panel-content" {% block panelContentAttributes %}{% endblock %}>
    {% block panelContent %}{% endblock %}
  </div><!-- /.dashboard-panel-content -->
  <footer class="dashboard-panel-footer" {% block panelFooterAttributes %}{% endblock %}>
    {% block panelFooter %}{% endblock %}
  </footer><!-- /.dashboard-panel-footer -->
</article><!-- /.dashboard-panel -->
