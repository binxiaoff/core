<div class="popup-overlay ui-BidConfirmation">
    <div data-popup-bid-confirmation class="popup message-info">
        <h4>
            {% trans %} project-detail_side-bar-bids-confirmation-popup {% endtrans %}
        </h4>
        <div class="row">
            <div class="col-lg-6 h5">
                <a href="javascript:;" data-popup-bid-confirmation-yes class="btn-primary">
                    {% trans %} project-detail_side-bar-bids-submit-button {% endtrans %}
                </a>
            </div>
            <div class="col-lg-6 h5">
                <a href="javascript:;" data-popup-bid-confirmation-no class="btn-primary">
                    {% trans %} project-detail_side-bar-bids-decline-button {% endtrans %}
                </a>
            </div>
        </div>
    </div>
</div>
<div class="popup-overlay ui-BidConfirmation-error">
    <div data-popup-bid-confirmation class="popup message-info">
        <p class="loan-max-amount-error">
            {{ ('project-detail_bid-not-eligible-reason-' ~ constant('\underlying_contract_attribute_type::TOTAL_LOAN_AMOUNT_LIMITATION_IN_EURO'))|transchoice(project.lender.bids.inprogress|length, {'%amountRest%': amountRest|localizedcurrency('EUR'), '%amountMax%': amountMax|localizedcurrency('EUR')}) }}
        </p>
        <p class="bid-min-amount-error">
            {% trans with {'%amountMin%': amountMin|localizedcurrency('EUR')}%} project-detail_bid-min-amount-error {% endtrans %}
        </p>
        <div class="row">
            <div class="col-lg-12 text-align-right">
                <p>
                    <a href="javascript:;" data-popup-bid-confirmation-no class="btn-primary">
                        {% trans %} project-detail_side-bar-bids-decline-button {% endtrans %}
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>
