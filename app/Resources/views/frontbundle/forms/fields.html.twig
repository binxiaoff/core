{% extends 'form_div_layout.html.twig' %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% if compound %}
                {% for error in errors %}
                    <div class="message-error">
                        <span>{{ error.message }}</span>
                    </div>
                {% endfor %}
            {% else %}
                <ul class="ui-formvalidation-messages">
                    {% for error in errors %}
                        <li class="ui-formvalidation-error">{{ error.message }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}
