<section id="profile-info-edit" role="tabpanel" class="profile-info-edit collapse {{ identityFormCollapse }}">
    {{ form_start(forms.identity, {
        'multipart' : true,
            'attr' : {
            'class' : 'form-profile form-profile-info-edit',
            'data-formvalidation data-formvalidation-notificationselem' : '#form-profile-info-notifications'
        }})
    }}
        <div class="row">
            <div class="form-field form-field-multi">
                <div class="field-label">
                    <label>
                        {% trans %} lender-profile_information-tab-identity-section-client-type-label {% endtrans %}
                        <span class="field-required">*<span class="sr-only"> {% trans %} common_mandatory-field {% endtrans %}</span></span></label>
                </div>
                <ul class="list-input-values">
                    <li>
                        <label><input type="radio" name="client_type" value="person" checked="checked"/>
                            {% trans %} lender-profile_information-tab-identity-section-client-type-person-label {% endtrans %}
                        </label>
                    </li>
                </ul>
            </div><!-- /.form-field -->
        </div><!-- /.row -->

        <div class="row">
            <div class="form-field form-field-multi">
                <div class="field-label">
                    <label>{% trans %} common_title {% endtrans %}
                        <span class="field-required">*<span class="sr-only"> {% trans %} common_mandatory-field {% endtrans %}</span></span></label>
                </div>
                <ul class="list-input-values" data-formvalidation-input data-formvalidation-required="true">
                    {{ form_widget(forms.identity.client.civilite, {'attr' : {
                        'class' : '',
                        'required' : false
                    }}) }}
                    {{ form_errors(forms.identity.client.civilite) }}
                </ul>
            </div><!-- /.form-field -->
        </div><!-- /.row -->

        <div class="row row-multi-col-computer">
            <div class="form-field col-lg-6 col-md-6">
                <label for="form-profile-info-nom">{% trans %} common_birth-name {% endtrans %}</label>
                <span id="form-profile-info-nom" >{{ client.nom }}</span>
            </div><!-- /.form-field -->
            <div class="form-field col-lg-6 col-md-6 {% if forms.identity.client.prenom.vars.errors|length > 0 %}ui-formvalidation-error{% endif %}">
                <label for="form-profile-info-prenom">{% trans %} common_firstname {% endtrans %}
                    <span class="field-required">*<span class="sr-only"> {% trans %} common_mandatory-field {% endtrans %}</span></span></label>
                    {{ form_widget(forms.identity.client.prenom, {
                        'id' : 'form-profile-info-prenom',
                        'attr' : {
                            'class' : 'input-field',
                            'data-formvalidation-input data-formvalidation-required' : 'true'
                        }})
                    }}
                    {{ form_errors(forms.identity.client.prenom) }}
            </div><!-- /.form-field -->
        </div><!-- /.row -->

        <div class="row row-multi-col-computer">
            <div class="form-field col-lg-6 col-md-6 {% if forms.identity.client.nomUsage.vars.errors|length > 0 %}ui-formvalidation-error{% endif %}">
                <label for="form-profile-info-prenom">{% trans %} common_used-name {% endtrans %}
                    <span class="field-required">*<span class="sr-only"> {% trans %} common_mandatory-field {% endtrans %}</span></span>
                </label>
                {{ form_widget(forms.identity.client.nomUsage, {
                    'id' : 'form-profile-info-prenom',
                    'attr' : {
                        'class' : 'input-field',
                        'data-formvalidation-input data-formvalidation-required' : 'false'
                    }})
                }}
                {{ form_errors(forms.identity.client.nomUsage) }}
            </div><!-- /.form-field -->
            <div class="form-field col-lg-6 col-md-6">
            </div><!-- /.form-field -->
        </div><!-- /.row -->

        <div class="row row-multi-col-computer">
            <div class="form-field col-lg-6 col-md-6 {% if forms.identity.client.idNationalite.vars.errors|length > 0 %}ui-formvalidation-error{% endif %}">
                <label>{% trans %} common_birthday {% endtrans %}</label>
                <span id="profile-info-dob-output">{{ client.naissance|date('d/m/Y') }}</span>
            </div><!-- /.form-field -->
            <div class="form-field col-lg-6 col-md-6">
                <label for="form-profile-info-nationalite">{% trans %} common_nationality {% endtrans %}
                    <span class="field-required">*<span class="sr-only"> {% trans %} common_mandatory-field {% endtrans %}</span></span>
                </label>
                {{ form_widget(forms.identity.client.idNationalite, {
                    'id' : 'form-profile-info-nationalite',
                    'attr' : {
                        'class' : 'input-field',
                        'data-formvalidation-input data-formvalidation-required' : 'true'
                    }})
                }}
                {{ form_errors(forms.identity.client.idNationalite) }}
            </div><!-- /.form-field -->
        </div><!-- /.row -->

        <div class="row row-multi-col-computer">
            <div class="form-field col-lg-6 col-md-6">
                <label for="form-profile-info-dob-pays">{% trans %} common_birth-country {% endtrans %}</label>
                <dd id="form-profile-info-dob-pays">{{ client.idPaysNaissance|countryLabel }}</dd>
            </div><!-- /.form-field -->
            <div class="form-field col-lg-6 col-md-6">
                <label for="form-profile-info-dob-commune">{% trans %} common_birth-city {% endtrans %}</label>
                <span id="form-profile-info-dob-commune">{{ client.villeNaissance }}</span>
            </div><!-- /.form-field -->
        </div><!-- /.row -->

        {# Show this message if nationality/form_of_address is changed #}
        <div class="message-alert collapse" id="identity-change-alert-message" aria-hidden="true">
            {% trans %} lender-profile_information-tab-identity-section-change-ID-warning-message {% endtrans %}
        </div>

        <div class="row">
            <div id="form-profile-info-identity-files-field" class="form-field">
                <label>{% trans %} lender-profile_information-tab-identity-section-ID-documents-label {% endtrans %}
                    <span class="field-required">*<span class="sr-only"> {% trans %} common_mandatory-field {% endtrans %}</span></span></label>

                <div class="form-field file-identity-side-a">
                    <div class="custom-input-file" id="form-profile-info-file-identite-cni-1"
                         data-formvalidation-input
                         data-formvalidation-required='input[type="file"][name="id_recto"]'
                         data-fileattach
                         data-fileattach-inputname="id_recto"
                         data-fileattach-maxfiles="1"
                         data-fileattach-emptyfilelabel="{% trans %} lender-profile_information-tab-identity-section-ID-recto {% endtrans %}"
                         data-fileattach-fileremove="false">
                        {% if identityAttachments[constant('\\Unilend\\Bundle\\CoreBusinessBundle\\Entity\\AttachmentType::CNI_PASSPORTE')].path is defined %}
                            <input type="file" name="id_recto" value="{{ identityAttachments[constant('\\Unilend\\Bundle\\CoreBusinessBundle\\Entity\\AttachmentType::CNI_PASSPORTE')].path }}" />
                        {% endif %}
                    </div><!-- /.ui-fileattach -->
                </div>

                <div class="form-field file-identity-side-b">
                    <div class="custom-input-file" id="form-profile-info-file-identite-cni-2"
                         data-fileattach
                         data-fileattach-inputname="id_verso"
                         data-fileattach-maxfiles="1"
                         data-fileattach-emptyfilelabel="{% trans %} lender-profile_information-tab-identity-section-ID-verso {% endtrans %}">
                        {% if identityAttachments[constant('\\Unilend\\Bundle\\CoreBusinessBundle\\Entity\\AttachmentType::CNI_PASSPORTE_VERSO')].path is defined %}
                            <input type="file" name="id_verso" value="{{ identityAttachments[constant('\\Unilend\\Bundle\\CoreBusinessBundle\\Entity\\AttachmentType::CNI_PASSPORTE_VERSO')].path }}" />
                        {% endif %}
                    </div><!-- /.ui-fileattach -->
                </div>

                <div class="field-help">
                    <p>{% trans %} lender-profile_information-tab-indentity-section-ID-document-notice {% endtrans %}</p>
                </div>
            </div>
        </div>

        <div class="btn-controls">
            <button type="submit" class="btn-primary" data-spinnerbutton>{% trans %} lender-profile_information-tab-identity-save-modifications-button {% endtrans %}</button>
            <input type="hidden" name="person_identity_form" value="true" />
            <button type="reset" role="button" data-toggle="collapse" data-target="#profile-info-view" data-parent="#profile-info-section" class="btn-default" aria-controls="#profile-info-view">{% trans %} lender-profile_information-tab-identity-cancel-modifications-button {% endtrans %}</button>
        </div>
    {{ form_end(forms.identity)}}
</section><!-- /.profile-info-edit -->
