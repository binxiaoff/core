<article id="balance-withdraw" role="tabpanel" class="tab-pane dashboard-tab-pane ui-toggle-group" aria-multiselectable="true">
    <section id="balance-withdraw-1" role="tabpanel" class="panel collapse in" aria-expanded="true">
        <div class="row reverse">
            <div class="col-lg-6 col-md-6">
                {# Maybe there's a better way of doing this, rather than duplicating this code twice #}
                <div class="dashboard-balance ui-balance-positive">
                    <dl>
                        <dt>{% trans %} lender-wallet_available-balance {% endtrans %}</dt>
                        <dd>{{ balance }}â‚¬</dd>
                    </dl>
                    <div class="dashboard-balance-image">{{ svgimage('#promo-money', '', 190, 190) | raw }}</div>
                </div><!-- /.dashboard-balance -->

                <div class="balance-payment-details balance-payment-myaccount">
                    <h4>{% trans %} lender-wallet_depositary-bank-account {% endtrans %}</h4>
                    <ul class="list-block">
                        <li>
                            <div class="label">{% trans %} lender-wallet_bank-account-owner {% endtrans %}</div>
                            <div class="value">{{ client.prenom }} {{ client.nom }}</div>
                        </li>
                        <li>
                            <div class="label">{% trans %} lender-wallet_client-number {% endtrans %}</div>
                            <div class="value">{{ client.id_client }}</div>
                        </li>
                        <li>
                            <div class="label">{% trans %} lender-wallet_bank-iban {% endtrans %}</div>
                            <div class="value">{{ lender.iban }}</div>
                        </li>
                        <li>
                            <div class="label">{% trans %} lender-wallet_bank-bic {% endtrans %}</div>
                            <div class="value">{{ lender.bic }}</div>
                        </li>
                    </ul>
                    <p><a href="#todo" class="link">{% trans %} lender-wallet_change-bank-account {% endtrans %}</a></p>
                </div><!-- /.balance-payment-details.balance-payment-transfer -->
            </div>

            <div class="dashboard-tab-pane-content col-lg-6 col-md-6">
                <h3>{% trans %} lender-wallet_withdraw-cash {% endtrans %}</h3>
                <p>{% trans %} lender-wallet_bank-transfer-withdraw-tips {% endtrans %}</p>
                <form id="form-balance-withdraw" action="{{ path('withdraw_money') }}" method="post" class="form-balance-withdraw" data-formvalidation data-formvalidation-render="false" data-ajax>
                    <div class="row row-multi-col-computer">
                        <div class="form-field col-lg-5 col-md-5">
                            <label for="form-balance-withdraw-amount">{% trans %} lender-wallet_amount {% endtrans %}
                                <span class="field-required">*<span class="sr-only"> {% trans %} common_mandatory-field {% endtrans %}</span></span>
                            </label>
                            <div class="input-group set-left">
                                <div class="btn-group">
                                    <span class="icon fa-euro"></span>
                                </div>
                                <input id="form-balance-withdraw-amount" type="number" min="0" max="{{ balance }}" step="any" name="amount" value="" class="input-field" data-formvalidation-input data-formvalidation-required="true" data-formvalidation-render="true"/>
                            </div>
                        </div><!-- /.form-field -->
                        <div class="form-field col-lg-7 col-md-7">
                            <label for="form-balance-withdraw-password">{% trans %} common_password {% endtrans %}
                                <span class="field-required">*<span class="sr-only"> {% trans %} common_mandatory-field {% endtrans %}</span></span>
                            </label>
                            <div class="input-group set-left">
                                <div class="btn-group">
                                    <span class="icon fa-lock"></span>
                                </div>
                                <input id="form-balance-withdraw-password" type="password" name="password" value="" class="input-field" data-formvalidation-input data-formvalidation-required="true" data-formvalidation-render="true"/>
                            </div>
                        </div><!-- /.form-field -->
                    </div>
                    <div class="btn-controls">
                        <button id="perform-withdrawal" class="btn-primary">{% trans %} lender-wallet_submit-transaction {% endtrans %}</button>
                    </div>
                </form>
            </div><!-- /.dashboard-tab-pane-content -->
        </div>
    </section><!-- /.panel -->
    <section id="balance-withdraw-result" role="tabpanel" class="panel collapse" aria-expanded="false"></section><!-- /.panel -->
</article><!-- /.tab-pane -->