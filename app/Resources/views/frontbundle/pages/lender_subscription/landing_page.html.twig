{# Projects Index #}
{% extends 'layouts/_layout.html.twig' %}

{# Page data #}
{% set bodyId = '' %}
{% set page = {
title: 'Devenir Prêteur',
permalink: path('landing_page_lender')
} %}


{# @TODO I'm having troubles with Twig.js, so the below implementation should work better than the one above which just copy+pastes code #}
{% block siteHeader %}
    {% embed 'partials/site/header.html.twig' %}
        {% block siteHeaderMobileMenuOpen %} {% endblock %}
        {% block siteHeaderNav %} {% endblock %}
        {% block siteHeaderControls %}
            <div class="site-header-message hide-xs hide-sm small c-t2">{% trans %} lender-landing-page_site-header-title {% endtrans %}</div>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block siteContent %}
    <article id="devenir-preteur" class="page page-lp">

        <div class="hero-wrap">
            <div class="page-content">
                <div class="site-wrap">
                    <div class="row row-multi-col-computer">
                        <div class="col-lg-6 col-md-6">
                            <h2 class="h3">{% trans %} lender-landing-page_text-section-title {% endtrans %}</h2>
                            <div class="block-copy-lp">
                                <p>{% trans %} lender-landing-page_text-section-text {% endtrans %}</p>
                                <p class="small">{% trans %} lender-landing-page_stats-section-IRR-text {% endtrans %}
                                    <span class="c-p1">{{ getStatistic('unilendIRR')|localizednumber }}%</span><br/>
                                    {% trans %} lender-landing-page_stats-section-amount-borrowed {% endtrans %}
                                    <span class="c-p1">{{ (getStatistic('amountBorrowed')/1000000)|round|localizednumber }}M€</span>
                                </p>
                            </div>
                        </div>
                        <div class="push-lg-1 col-lg-5 push-md-1 col-md-5">

                            <div id="form-preter-lp-notifications">
                                {% if app.session.flashBag.has('landingPageErrors') %}
                                    <div class="message-error">
                                        {% for error in app.session.flashBag.get('landingPageErrors') %}
                                            <p>{{ error }}</p>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>

                            <form action="{{ path('landing_page_lender_submit') }}" method="post" class="form-preter-lp" data-formvalidation data-formvalidation-notificationselem="#form-preter-lp-notifications">

                                <div class="form-field row row-multi-col-computer">
                                    <div class="col-lg-2 col-md-3">
                                        <label for="form-preter-lp-nom" class="field-label">{% trans %} lender-landing-page_form-field-name-label {% endtrans %}<span class="field-required">* <span class="sr-only">{% trans %} lender-landing-page_required-form-field {% endtrans %}</span></span></label>
                                    </div>
                                    <div class="col-lg-7 col-md-7">
                                        <input type="text" id="form-preter-lp-nom" name="prospect_name" value="" class="input-field" data-formvalidation-input data-formvalidation-required="true"/>
                                        <ul class="ui-formvalidation-messages"></ul>
                                    </div>
                                </div><!-- /.form-field -->

                                <div class="form-field row row-multi-col-computer">
                                    <div class="col-lg-2 col-md-3">
                                        <label for="form-preter-lp-prenom" class="field-label">{% trans %} lender-landing-page_form-field-first-name-label {% endtrans %}<span class="field-required">* <span class="sr-only">{% trans %} lender-landing-page_required-form-field {% endtrans %}</span></span></label>
                                    </div>
                                    <div class="col-lg-7 col-md-7">
                                        <input type="text" id="form-preter-lp-prenom" name="prospect_first_name" value="" class="input-field" data-formvalidation-input data-formvalidation-required="true"/>
                                        <ul class="ui-formvalidation-messages"></ul>
                                    </div>
                                </div><!-- /.form-field -->

                                <div class="form-field row row-multi-col-computer">
                                    <div class="col-lg-2 col-md-3">
                                        <label for="form-preter-lp-email" class="field-label">{% trans %} lender-landing-page_form-field-email-label {% endtrans %}<span class="field-required">* <span class="sr-only">{% trans %} lender-landing-page_required-form-field {% endtrans %}</span></span></label>
                                    </div>
                                    <div class="col-lg-7 col-md-7">
                                        <input type="email" id="form-preter-lp-email" name="prospect_email" value="" class="input-field" data-formvalidation-input data-formvalidation-required="true"/>
                                        <ul class="ui-formvalidation-messages"></ul>
                                    </div>
                                </div><!-- /.form-field -->

                                <footer class="form-preter-lp-footer row row-multi-col-computer">
                                    <div class="col-submit push-lg-2 col-lg-7 push-md-3 col-md-7">
                                        <button type="submit" class="btn-primary btn-size-full">{% trans %} lender-landing-page_form-submit-button {% endtrans %}</button>
                                    </div>
                                </footer><!-- /.form-preter-lp-footer -->

                                <div class="stamp bg-p1" data-watchscroll-action="enter" data-watchscroll-callback="addClass:ui-is-visible">
                                    {% trans %} lender-landing-page_welcome-offer-text {% endtrans %}
                                </div><!-- /.stamp -->
                            </form><!-- /.form-preter-lp -->
                        </div>
                    </div>

                    <div class="promos row">
                        <div class="promo col-lg-4 col-md-4">
                            <div class="promo-image">
                                {{ svgimage('#promo-clock', '', 190, 190, 'none')|raw }}
                            </div>
                            <h3 class="round-number">1</h3>
                            <p>{% trans %} lender-landing-page_promo-section-step-1-text {% endtrans %}</p>
                        </div><!-- /.promo -->

                        <div class="promo col-lg-4 col-md-4">
                            <div class="promo-image">
                                {{ svgimage('#promo-pagestack', '', 190, 190, 'none')|raw }}
                            </div>
                            <h3 class="round-number">2</h3>
                            <p>{% trans %} lender-landing-page_promo-section-step-2-text {% endtrans %}</p>
                        </div><!-- /.promo -->

                        <div class="promo col-lg-4 col-md-4">
                            <div class="promo-image">
                                {{ svgimage('#promo-money', '', 190, 190, 'none')|raw }}
                            </div>
                            <h3 class="round-number">3</h3>
                            <p>{% trans %} lender-landing-page_promo-section-step-3-text {% endtrans %}</p>
                        </div><!-- /.promo -->
                    </div><!-- /.promos -->

                </div><!-- /.site-wrap -->
            </div><!-- /.page-content -->

            {# include 'partials/components/list-socialmedia.twig' #}
        </div><!-- /.hero-wrap -->

        <div class="site-wrap block-copy-lp-footer">
            <div class="row row-multi-col-computer">
                <div class="col-info col-lg-8 col-md-8">
                    <div class="readable-wrap">
                        <p>{% trans %} lender-landing-page_footer-warning {% endtrans %}</p>
                    </div>
                </div>
                <div class="col-conditions col-lg-4 col-md-4">
                    <p>* <a href="#dialog-conditions-content" class="fancybox-html">{% trans %} lender-landing-page_welcome-offer-conditions-title {% endtrans %}</a></p>
                </div>
            </div>
        </div><!-- /.block-copy-lp-footer -->

        {# Hidden text until made visible through the fancybox #}
        <div class="hide-accessible">

            <div id="dialog-conditions-content" class="dialog-content readable-wrap text-align-center">
                <h3>{% trans %} lender-landing-page_welcome-offer-conditions-title {% endtrans %}</h3>
                {% trans %} lender-landing-page_welcome-offer-conditions-text {% endtrans %}
            </div><!-- /#dialog-conditions-content -->

        </div><!-- /.hide-accessible -->

    </article><!-- /.page -->
{% endblock %}

{% block siteFooter %}
    <footer class="site-footer">
        <div class="site-wrap">
            {% block siteFooterNav %} {% endblock %}
            <div class="row">
                <div class="col-sub-left col-lg-4 col-md-4">
                    {% block siteFooterSubLeft %}&nbsp;{% endblock %}
                </div>
                <div class="col-sub-center col-lg-4 col-md-4">
                    {% block siteFooterSubCenter %}
                        <ul class="list-awards">
                            {% for partner in partners %}
                                <li>
                                    <img src="{{ uploadedImage(partner.src) }}" alt="{{ partner.alt }}"/>
                                </li>
                            {% endfor %}
                        </ul>
                        <div class="site-tagline">{% trans %} footer_site-tagline {% endtrans %}</div>
                        <p class="site-copyright">{% trans %} footer_copyright-all-rights {% endtrans %}-
                            <a href="{{ route('legal') }}">{% trans %} footer_small-mandatory-menu-legal-notice {% endtrans %}</a>
                        </p>
                    {% endblock %}
                </div>
                <div class="col-sub-right col-lg-4 col-md-4">
                    {% block siteFooterSubRight %}&nbsp;{% endblock %}
                </div>
            </div>
        </div><!-- /.site-wrap -->
    </footer><!-- /.site-footer -->

    {% block siteWarnings %}
        <!-- Site Warning: No JS enabled -->
        <noscript>
            <div class="site-warning">
                <div class="site-wrap">
                    <h1>{% trans %} site-general_warning-no-javascript-title {% endtrans %}</h1>
                    <p>{% trans %} site-general_warning-no-javascript-text {% endtrans %}</p>
                    <div class="btn-toolbar">
                        <a href="{{ route('/') }}" class="btn-default">{% trans %} site-general_reload-website {% endtrans %}</a>
                    </div>
                </div>
            </div>
        </noscript>

        <!-- Site Warning: Unsupported IE -->
        <!--[if lt IE 9]>
        <div class="site-warning">
            <div class="site-wrap">
                <h1>{% trans %} site-general_warning-unsupported-browser-title {% endtrans %}</h1>
                <p>{% trans %} site-general_warning-unsupported-browser-text {% endtrans %}</p>
                <div class="btn-toolbar">
                    <a href="{{ route('/') }}" class="btn-default">{% trans %} site-general_warning-unsupported-browser-confirmation {% endtrans %}</a>
                    <a href="http://www.browsehappy.com/" target="_blank" class="btn-default">{% trans %} site-general_warning-unsupported-browser-new-browser {% endtrans %}</a>
                </div>
            </div>
        </div>
        <![endif]-->
    {% endblock %}
{% endblock %}

