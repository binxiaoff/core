{# Projects Index #}
{% extends 'layouts/_layout.html.twig' %}
{% import 'extensions/_general.macros.twig' as general %}

{# Page data #}
{% set bodyId = '' %}
{% set page = {
title: 'Devenir Prêteur',
permalink: path('lender_subscription_step_2', {'clientHash' : client.hash })
} %}

{% block siteContent %}
<article id="devenir-preteur" class="page">
    <div class="hero-wrap">

        <header class="page-header">
            <div class="site-wrap">
                <h1 id="preter-create-title" class="h1">{% trans %} lender-subscription_page-title {% endtrans %}</h1>
            </div><!-- /.site-wrap -->
        </header><!-- /.page-header -->

        <div class="page-content">
            <div class="site-wrap">
                <div class="tabs ui-tabs-progress">
                    {% include 'pages/lender_subscription/partials/progress_bar.html.twig' %}

                    <div class="form-preter-content tab-content">
                        <form id="form-lender-step-2" method="post" action="{{ path('lender_subscription_submit_step_2') }}" class="form-preter-create" data-cacheform>
                            <div id="form-preter-2" role="tabpanel" class="tab-pane active" aria-labelledby="preter-create-2 preter-create-title">
                                <div class="row">
                                    <div class="col-form col-lg-8 col-md-8" data-formvalidation data-formvalidation-notificationselem="#form-preter-2-notifications">
                                        {{ include('pages/lender_subscription/partials/step_2_bank_info.html.twig') }}
                                        {% if client.type in [constant('\\clients::TYPE_PERSON'), constant('\\clients::TYPE_PERSON_FOREIGNER')] %}
                                            {{ include('pages/lender_subscription/partials/step_2_attachments_person.html.twig') }}
                                        {% else %}
                                            {{ include('pages/lender_subscription/partials/step_2_attachments_legal_entity.html.twig') }}
                                        {% endif %}
                                        <div class="row reverse btn-controls tab-footer">
                                            <div class="col-submit col-lg-7 col-md-7">
                                                <button class="btn-primary">{% trans %} lender-subscription_step-2-submit-button {% endtrans %}
                                                    <span class="icon fa-angle-right"></span></button>
                                            </div>
                                        </div><!-- /.btn-controls.tab-footer -->
                                    </div>

                                    <div class="col-promos col-lg-4 col-md-4">
                                        <div class="promo">
                                            <div class="promo-image">
                                                {{ svgimage('#promo-saving', '', 190, 190, 'none') | raw }}
                                            </div>
                                            <h3 class="promo-highlight">
                                                <span class="ui-text-count" data-start-count="0" data-end-count="100" data-total-time="3000" data-round-float="round" data-tween-count="easeOutCirc">100</span><sup>%</sup>
                                            </h3>
                                            <p>100% des intérêts sont reversés aux prêteurs</p>
                                        </div><!-- /.promo -->

                                        <div class="promo">
                                            <div class="promo-image">
                                                {{ svgimage('#promo-linechart2', '', 190, 190, 'none') | raw }}
                                            </div>
                                            <h3 class="promo-highlight">
                                                <span class="ui-text-count" data-start-count="0" data-end-count="5.30" data-total-time="3000" data-tween-count="easeOutQuint">5,30</span><sup>%</sup>
                                            </h3>
                                            <p>Taux de rendement de la plateforme</p>
                                        </div><!-- /.promo -->

                                        <div class="promo">
                                            <div class="promo-image">
                                                {{ svgimage('#promo-pagestack', '', 190, 190, 'none') | raw }}
                                            </div>
                                            <h3 class="promo-highlight">20</h3>
                                            <p>Prêt dès 20&nbsp;€ par projet</p>
                                        </div><!-- /.promo -->
                                    </div>
                                </div><!-- /.row -->
                            </div><!-- /.tab-pane -->
                        </form><!-- /.form-preter-create -->
                    </div><!-- /.form-preter-content -->
                </div><!-- /.tabs -->
            </div><!-- /.site-wrap -->
        </div><!-- /.page-content -->

        {% include 'partials/components/list-socialmedia.html.twig' %}
    </div><!-- /.hero-wrap -->

</article><!-- /.page -->
{% endblock %}


