<fieldset class="panel">
    <div id="form-preter-2-notifications" class="ui-formvalidation-notifications">
        {% if app.session.flashBag.has('step2Errors') %}
            <div class="message-error">
                {% for error in app.session.flashBag.get('step2Errors') %}
                    <p>{{ error }}</p>
                {% endfor %}
            </div>
        {% endif %}
    </div>
