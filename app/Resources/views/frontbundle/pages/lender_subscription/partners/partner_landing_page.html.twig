<article id="devenir-preteur" class="page page-lp">
    <div class="hero-wrap">
        <div class="page-content">
            <div class="site-wrap">
                <div class="row row-multi-col-computer">
                    <div class="col-lg-6 col-md-6">
                        <h1 class="site-title">
                            <a class="site-logo" tabindex="2">Unilend</a>
                        </h1>

                        <h2 class="h3">{% trans %} lender-landing-page_text-section-title {% endtrans %}</h2>

                        <div class="block-copy-lp">
                            <p>{% trans %} lender-landing-page_text-section-text {% endtrans %}</p>

                            <p class="small">{% trans %} lender-landing-page_stats-section-IRR-text {% endtrans %}
                                <span class="c-p1">{{ getStatistic('unilendIRR')|localizednumber }}%</span><br/>
                                {% trans %} lender-landing-page_stats-section-amount-borrowed {% endtrans %}
                                <span class="c-p1">{{ getStatistic('amountBorrowedInMillions')|localizednumber }}Mâ‚¬</span>
                            </p>
                        </div>
                    </div>
                    <div class="push-lg-1 col-lg-5 push-md-1 col-md-5">
                        {% include 'pages/lender_subscription/partials/landing_page_form.html.twig' %}
                    </div>
                </div>

                <div class="promos row">
                    <div class="promo col-lg-4 col-md-4">
                        <div class="promo-image">
                            {{ svgimage('#promo-clock', '', 190, 190, 'none')|raw }}
                        </div>
                        <h3 class="round-number">1</h3>

                        <p>{% trans %} lender-landing-page_promo-section-step-1-text {% endtrans %}</p>
                    </div><!-- /.promo -->

                    <div class="promo col-lg-4 col-md-4">
                        <div class="promo-image">
                            {{ svgimage('#promo-pagestack', '', 190, 190, 'none')|raw }}
                        </div>
                        <h3 class="round-number">2</h3>

                        <p>{% trans %} lender-landing-page_promo-section-step-2-text {% endtrans %}</p>
                    </div><!-- /.promo -->

                    <div class="promo col-lg-4 col-md-4">
                        <div class="promo-image">
                            {{ svgimage('#promo-money', '', 190, 190, 'none')|raw }}
                        </div>
                        <h3 class="round-number">3</h3>

                        <p>{% trans %} lender-landing-page_promo-section-step-3-text {% endtrans %}</p>
                    </div><!-- /.promo -->
                </div><!-- /.promos -->

            </div><!-- /.site-wrap -->
        </div><!-- /.page-content -->

        {# include 'partials/components/list-socialmedia.twig' #}
    </div><!-- /.hero-wrap -->

    <div class="site-wrap block-copy-lp-footer">
        <div class="row row-multi-col-computer">
            <div class="col-info col-lg-8 col-md-8">
                <div class="readable-wrap">
                    <p>{% trans %} lender-landing-page_footer-warning {% endtrans %}</p>
                </div>
            </div>
            <div class="col-conditions col-lg-4 col-md-4">
                <p>*
                    <a href="#dialog-conditions-content" class="fancybox-html">{% trans %} lender-landing-page_welcome-offer-conditions-title {% endtrans %}</a>
                </p>
            </div>
        </div>
    </div><!-- /.block-copy-lp-footer -->

    {# Hidden text until made visible through the fancybox #}
    <div class="hide-accessible">

        <div id="dialog-conditions-content" class="dialog-content readable-wrap text-align-center">
            <h3>{% trans %} lender-landing-page_welcome-offer-conditions-title {% endtrans %} </h3>
            {% trans %} lender-landing-page_welcome-offer-conditions-text {% endtrans %}
        </div><!-- /#dialog-conditions-content -->

    </div><!-- /.hide-accessible -->

</article><!-- /.page -->
