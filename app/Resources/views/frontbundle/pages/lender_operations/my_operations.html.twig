<article id="operations" role="tabpanel" class="dashboard-tab-pane tab-pane active">
    <div class="panel panel-operations-operations">
        <header class="panel-header">
            <h3 class="panel-title">{% trans %} lender-operations_all-my-operations {% endtrans %}</h3>
            <div class="panel-controls">
                <a href="#todo" class="btn-default"><span class="icon fa-print-u32"></span><span class="label"> {% trans %} lender-operations_print {% endtrans %} </span></a>
                <a href="#todo" class="btn-default"><span class="icon fa-excel-u32"></span><span class="label"> {% trans %} lender-operations_csv-export {% endtrans %} </span></a>
            </div>
        </header><!-- /.panel-header -->
        <div class="panel-content">

            <form id="form-filters-operations" action="{{ route('user/preter/operations/operations/filter') }}" method="post" class="form-filters" data-ajax>
                <div id="filters" class="row row-multi-col-computer collapse in">
                    <div class="form-field col-lg-8 col-md-8">
                        <div class="field-label">
                            <label>{% trans %} lender-operations_filter-by-period {% endtrans %}
                                <span class="field-required">*<span class="sr-only"> Required</span></span></label>
                        </div><!-- /.field-label -->
                        <div class="row input-fields">
                            <div class="col-lg-3 col-md-3 col-sm-4">
                                <select name="filter[slide]" class="input-field">
                                    <option value="0">{% trans %} lender-operations_rolling-period {% endtrans %}</option>
                                    {% set monthNumber = [1, 3, 6, 12] %}
                                    {% for numberOfMonths in monthNumber %}
                                        <option value="{{ numberOfMonths }}"> {% trans with { '%count%' : numberOfMonths } %} lender-operations_month {% endtrans %} </option>
                                    {% endfor %}
                                </select>
                            </div>
                            {% set startYear = 2013 %}
                            {% set endYear   = date() | date('Y') %}
                            <div class="col-lg-3 col-md-3 col-sm-4">
                                <select name="filter[year]" class="input-field">
                                    <option value="0"> {% trans %} lender-operations_year {% endtrans %} </option>
                                    {% for year in endYear..startYear %}
                                        <option value="{{ year }}"> {{ year }} </option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-4">
                                <div class="input-group set-right">
                                    <input type="text" id="filter-start" name="filter[start]" value="{{ date('-1month') | date('d/m/y') }}" placeholder="{% trans %} lender-operations_start {% endtrans %}" class="input-field ui-has-datepicker"/>
                                    <div class="btn-group">
                                        <label for="filter-start"><span class="icon fa-calendar-u32 c-p1"><span class="sr-only">Select start date</span></span></label>
                                    </div><!-- /.btn-group -->
                                </div><!-- /.input-group -->
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-4">
                                <div class="input-group set-right">
                                    <input type="text" id="filter-end" name="filter[end]" value="{{ date() | date('d/m/y') }}" placeholder="{% trans %} lender-operations_end {% endtrans %}" class="input-field ui-has-datepicker"/>
                                    <div class="btn-group">
                                        <label for="filter-end"><span class="icon fa-calendar-u32 c-p1"><span class="sr-only">Select end date</span></span></label>
                                    </div><!-- /.btn-group -->
                                </div><!-- /.input-group -->
                            </div>
                        </div><!-- /.input-fields -->
                    </div><!-- /.form-field -->

                    <div class="form-field col-lg-4 col-md-4">
                        <div class="field-label">
                            <label>{% trans %} lender-operations_filter-by-type {% endtrans %}
                                <span class="field-required">*<span class="sr-only"> Required</span></span></label>
                        </div><!-- /.field-label -->
                        <div class="row input-fields">
                            <div class="col-lg-6 col-md-6 col-sm-4">
                                <select name="filter[operation]" class="input-field">
                                    <option value="0">{% transchoice 2 %} lender-operations_operation {% endtranschoice %}</option>
                                    <option value="2">{% trans %} lender-operations_deposit-withdrawal-operations {% endtrans %}</option>
                                    <option value="3">{% trans %} lender-operations_deposit-operations {% endtrans %}</option>
                                    <option value="4">{% trans %} lender-operations_withdrawal-operations {% endtrans %}</option>
                                    <option value="5">{% trans %} lender-operations_loan-deals-operations {% endtrans %}</option>
                                    <option value="6">{% trans %} lender-operations_repayment-operations {% endtrans %}</option>
                                </select>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-4">
                                <select name="filter[project]" class="input-field">
                                    <option>{% transchoice 2 %} lender-operations_project {% endtranschoice %}</option>
                                    {% for project in projectsFundedByLender %}
                                        <option value="{{ project.id_project }}">{{ project.title }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div><!-- /.input-fields -->
                    </div><!-- /.form-field -->
                </div>
            </form><!-- /.form-operations-filters -->

            <div class="table-scroll">
                <table class="table table-myoperations" data-sortable>
                    <thead class="table-sortable-columns">
                    <tr>
                        <th class="table-sortable-column table-myoperations-item-type" data-sortable-by="type">
                            <span class="label"><span class="sr-only">Sort by column </span>{% transchoice 1 %} lender-operations_operation {% endtranschoice %}</span>
                        </th>
                        <th class="table-sortable-column table-myoperations-item-contract" data-sortable-by="contract">
                            <span class="label"><span class="sr-only">Sort by column </span>{% trans %} lender-operations_contract-number {% endtrans %}</span>
                        </th>
                        <th class="table-sortable-column table-myoperations-item-project" data-sortable-by="project">
                            <span class="label"><span class="sr-only">Sort by column </span>{% transchoice 1 %} lender-operations_project {% endtranschoice %}</span>
                        </th>
                        <th class="table-sortable-column table-myoperations-item-date" data-sortable-by="date">
                            <span class="label"><span class="sr-only">Sort by column </span>{% trans %} lender-operations_date {% endtrans %}</span>
                        </th>
                        <th class="table-sortable-column table-myoperations-item-amount" data-sortable-by="amount">
                            <span class="label"><span class="sr-only">Sort by column </span>{% trans %} lender-operations_amount {% endtrans %}</span>
                        </th>
                        <th class="table-sortable-column table-myoperations-item-balance" data-sortable-by="balance">
                            <span class="label"><span class="sr-only">Sort by column </span>{% trans %} lender-operations_account-balance {% endtrans %}</span>
                        </th>
                    </tr>
                    </thead>
                    <tbody data-sortable-content>
                    {% for i, op in lenderOperations %}
                        {% set classAmount = op.montant_operation > 0 ? 'ui-amount-positive' : 'ui-amount-negative' %}
                        {% set classBalance = op.solde > 0 ? 'ui-balance-positive' : 'ui-balance-negative' %}
                        {#@todo use transalated text for operation label :
                            {% trans %} lender-operations_repayed-capital-amount {% endtrans %}
                            {% trans %} lender-operations_repayed-interest-amount {% endtrans %}
                        #}
                        {% if op.type_transaction in detailedOperations %}
                            {% set operationDetails = {
                                    "label": op.libelle_operation,
                                    "items": [
                                        {
                                            "label": repayedCapitalLabel,
                                            "value": op.montant_capital/100|__num(2)
                                        },{
                                            "label": repayedInterestLabel,
                                            "value": op.montant_interet/100|__num(2)
                                        },{
                                            "label": op.libelle_prelevement,
                                            "value": op.montant_prelevement/-100|__num(2)
                                        }
                                    ]
                                }
                            %}
                        {% endif %}
                        <tr {{ general.attrsString({
                            'id': 'operation-' ~ op.id,
                            'data-sortable-type': op.type_transaction,
                            'data-sortable-contract': op.bdc,
                            'data-sortable-project': op.id_projet,
                            'data-sortable-date': op.date_operation|date('U'),
                            'data-sortable-amount': op.montant_operation/100|__num(2),
                            'data-sortable-balance': op.solde/100|__num(2)
                        }) }}{% if op.type_transaction in detailedOperations %} data-details='{{ operationDetails|json_encode|escape('html_attr') }}'{% endif %} class="table-myoperations-item {{ classAmount }} {{ classBalance }}">
                            <td class="table-myoperations-item-type">{{ op.libelle_operation }}</td>
                            <td class="table-myoperations-item-contract">{{ op.bdc }}</td>
                            <td class="table-myoperations-item-project">
                                <div class="text-crop">{{ op.libelle_projet }}</div>
                            </td>
                            <td class="table-myoperations-item-date">{{ op.date_operation|date('d/m/y') }}</td>
                            <td class="table-myoperations-item-amount">{{ op.montant_operation/100|__num(2) }}€</td>
                            <td class="table-myoperations-item-balance">{{ op.solde/100|__num(2) }}€</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table><!-- /.table-myoperations -->
            </div><!-- /.table-scroll -->
        </div><!-- /.panel-content -->
    </div><!-- /.panel -->
</article><!-- /#myoperations.tab-pane -->
