{% if loan.activity.messages|length > 0 %}
    <div class="list-notifications" data-paginate>
    {% for i, notification in loan.activity.messages %}
        <div class="notification notification-type-{{ notification.type|default('message')|e('html_attr') }} ui-notification-status-{{ notification.status }}" data-notification-id="{{ notification.id|default(notification.datetime|date('U'))|e('html_attr') }}" tabindex="0">
            <div class="notification-image">
            {% if notification.image %}
                <span class="svg-icon-wrap">{{ svgimage('#' ~ notification.image, notification.title, 100, 100, 'none')|raw }}</span>
            {% endif %}
            </div>
            <div class="notification-info">
                <h4 class="notification-title">{{ notification.title|raw }}</h4>
                <h5 class="notification-datetime">{{ notification.datetime|localizeddate('medium', 'short') }}</h5>
                <div class="notification-content">
                    <p>{{ notification.content|raw|nl2br }}</p>
                </div>
            </div>
        </div><!-- /.notification -->
    {% endfor %}
    </div>
{% endif %}
