{% extends 'layouts/_layout.html.twig' %}

{% block siteContent %}
    <div class="site-wrap">
        <section class="page-section">
            <h3>{{ "universign_#{ document }-title-#{ status }"|trans|raw }}</h3>
            <div class="row">
                <p>{{ "universign_#{ document }-message-#{ status }"|trans({'%borrower_account_link%': borrowerAccountLink})|raw }}</p>
                {% if universign.status == constant('Unilend\\Bundle\\CoreBusinessBundle\\Entity\\UniversignEntityInterface::STATUS_SIGNED') %}
                    <div class="document-download">
                        <a href="{{ pdfLink }}" target="_blank">
                            <img class="document-download" src="{{ siteurlmedia('dashboard/file-pdf-60x80.png') }}" alt="{% trans %} borrower-document_invoices-invoice-download-link-placeholder {% endtrans %}"/>
                            {% trans %} borrower-document_invoices-invoice-download-link {% endtrans %}
                        </a>
                    </div>
                {% endif %}
            </div><!-- /.row -->
        </section>
    </div><!-- /.site-wrap -->
{% endblock %}
