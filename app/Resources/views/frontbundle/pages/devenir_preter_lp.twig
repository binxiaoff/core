{% block siteFooter %}
  <footer class="site-footer">
    <div class="site-wrap">
      {% block siteFooterNav %} {% endblock %}
      <div class="row">
        <div class="col-sub-left col-lg-4 col-md-4">
          {% block siteFooterSubLeft %}&nbsp;{% endblock %}
        </div>
        <div class="col-sub-center col-lg-4 col-md-4">
          {% block siteFooterSubCenter %}
            <ul class="list-awards">
              <li><img src="{{ siteurlmedia('awards/award-bpifrance-150x70.png') }}" alt="BPI France 2014"/></li>
              <li><img src="{{ siteurlmedia('awards/award-fr-70x70.png') }}" alt="IFP France"/></li>
            </ul>
            <div class="site-tagline">Unilend. Vos intérêts se rencontrent.</div>
            <p class="site-copyright">&copy;2016 - {{ __('All Rights Reserved', 'siteFooterCopyrightAllRights') }} - <a href="{{ route('legal') }}">Mentions&nbsp;légales</a></p>
          {% endblock %}
        </div>
        <div class="col-sub-right col-lg-4 col-md-4">
          {% block siteFooterSubRight %}&nbsp;{% endblock %}
        </div>
      </div>
    </div><!-- /.site-wrap -->
  </footer><!-- /.site-footer -->

