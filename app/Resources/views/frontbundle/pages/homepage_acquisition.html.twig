{% extends 'layouts/_layout.html.twig' %}

{% import 'partials/modules/_promo-battenberg.macros.twig' as promoBattenberg %}

{% set page = {
    title: 'Home',
    permalink: path('home')
} %}

{% block siteContent %}
    <article id="homeacq" class="page">
        <section id="homeacq-video-hero" class="cta-video-hero" aria-hidden="true" data-set-device-height="xs">
            <div class="video-hero-wrapper">
                <div id="homeacq-video-hero-swiper" class="video-hero-slideshow swiper-container" data-swiper-autoplay="5000" data-swiper-speed="500">
                    <div class="swiper-wrapper">
                        <div class="video-hero swiper-slide" data-preter-name="{{ videoHeroes.Lenders.0.name }}" data-emprunter-name="{{ videoHeroes.Borrowers.0.name }}">
                            <div class="video-hero-image">&nbsp;</div>
                            <div class="caption caption-align-left">
                                <div class="caption-name">{{ videoHeroes.Lenders.0.name }} &mdash; {{ videoHeroes.Lenders.0.age }}</div>
                                <div class="caption-info">{{ videoHeroes.Lenders.0.info | raw}}</div>
                                <div class="caption-links"><a href="{{ videoHeroes.Lenders.0.urlTestimonial }}" class="link">{% trans %} site-general_testimonial-section-link-to-testimonial-title {% endtrans %}</a></div>
                            </div><!-- /.caption -->
                            <div class="caption caption-align-right">
                                <div class="caption-name">{{ videoHeroes.Borrowers.0.name }} &mdash; {{ videoHeroes.Borrowers.0.age }}</div>
                                <div class="caption-info">{{ videoHeroes.Borrowers.0.info | raw}}</div>
                                <div class="caption-links">
                                    <a href="{{ videoHeroes.Borrowers.0.urlTestimonial }}" class="link">{% trans %} site-general_testimonial-section-link-to-testimonial-title {% endtrans %}</a></div>
                            </div><!-- /.caption -->
                        </div>
                        <div class="video-hero swiper-slide" data-preter-name="{{ videoHeroes.Lenders.1.name }}" data-emprunter-name="{{ videoHeroes.Borrowers.1.name }}">
                            <div class="video-hero-image">&nbsp;</div>
                            <div class="caption caption-align-left">
                                <div class="caption-name">{{ videoHeroes.Lenders.1.name }} &mdash; {{ videoHeroes.Lenders.1.age }}</div>
                                <div class="caption-info">{{ videoHeroes.Lenders.1.info | raw}}</div>
                                <div class="caption-links"><a href="{{ videoHeroes.Lenders.1.urlTestimonial }}" class="link">{% trans %} site-general_testimonial-section-link-to-testimonial-title {% endtrans %}</a></div>
                            </div><!-- /.caption -->
                            <div class="caption caption-align-right">
                                <div class="caption-name">{{ videoHeroes.Borrowers.1.name }} &mdash; {{ videoHeroes.Borrowers.1.age }}</div>
                                <div class="caption-info">{{ videoHeroes.Borrowers.1.info | raw}}</div>
                                <div class="caption-links"><a href="{{ videoHeroes.Borrowers.1.urlTestimonial }}" class="link">{% trans %} site-general_testimonial-section-link-to-testimonial-title {% endtrans %}</a></div>
                            </div><!-- /.caption -->
                        </div>
                        <div class="video-hero swiper-slide" data-preter-name="{{ videoHeroes.Lenders.2.name }}" data-emprunter-name="{{ videoHeroes.Borrowers.2.name }}">
                            <div class="video-hero-image">&nbsp;</div>
                            <div class="caption caption-align-left">
                                <div class="caption-name">{{ videoHeroes.Lenders.2.name }} &mdash; {{ videoHeroes.Borrowers.1.age }}</div>
                                <div class="caption-info">{{ videoHeroes.Lenders.2.info | raw}}</div>
                                <div class="caption-links"><a href="{{ videoHeroes.Lenders.2.urlTestimonial }}" class="link">{% trans %} site-general_testimonial-section-link-to-testimonial-title {% endtrans %}</a></div>
                            </div><!-- /.caption -->
                            <div class="caption caption-align-right">
                                <div class="caption-name">{{ videoHeroes.Borrowers.2.name }} &mdash; {{ videoHeroes.Borrowers.1.age }}</div>
                                <div class="caption-info">{{ videoHeroes.Borrowers.2.info | raw}}</div>
                                <div class="caption-links"><a href="{{ videoHeroes.Borrowers.2.urlTestimonial }}" class="link">{% trans %} site-general_testimonial-section-link-to-testimonial-title {% endtrans %}</a></div>
                            </div><!-- /.caption -->
                        </div>
                    </div>
                    <!-- <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div> -->
                </div>

                <div class="video-hero-cta">
                    <div class="btn-media-wrapper">
                        <a href="https://www.youtube.com/watch?v=Fmtz6vI65GY" class="btn-media fancybox-media fancybox-embed-videojs">
                            <span class="icon fa-play"><span class="sr-only">{% trans %} site-general_video-play-button-label {% endtrans %}</span></span>
                        </a>
                    </div>
                    <h5 class="c-p1"><span class="ui-preter-name">Julie</span> {% trans %} site-general_testimonial-section-video-text {% endtrans %}&nbsp;<span
                                class="ui-emprunter-name c-p2">Didier</span></h5>
                    <h3>{% trans %} site-general_testimonial-section-video-slogan {% endtrans %}</h3>
                </div><!-- /.video-hero-cta -->

                {% include 'partials/components/list-socialmedia.html.twig' %}

                <div class="btn-toolbar row">
                    <div class="col-lg-6 col-md-6">
                        <a href="{{ path('home_lender') }}" class="btn-cta btn-color-primary text-align-right"><span class="icon fa-angle-right"></span>
                            {% trans %} site-general_button-under-video-lender {% endtrans %}</a>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <a href="{{ path('home_borrower') }}" class="btn-cta btn-color-alternate text-align-left"><span class="icon fa-angle-right"></span>
                            {% trans %} site-general_button-under-video-borrower {% endtrans %}</a>
                    </div>
                </div><!-- /.btn-toolbar.row -->
            </div><!-- /.video-hero-wrapper -->
        </section><!-- /.cta-video-hero -->

        <section id="homeacq-section-statistics" class="page-section">
            <div class="site-wrap">
                <h1 class="h2">{% trans %} site-general_unilend-stats-title {% endtrans %}</h1>
                <div class="row">
                    <div class="col-lg-4 col-md-4">
                        <div class="promo">
                            <div class="promo-image">
                                {{ svgimage('#promo-projects', '', 190, 190, 'none') | raw }}
                            </div>
                            {% set valueProjects = ('site-general_unilend-stats-projects-value'|trans != 'site-general_unilend-stats-projects-value') ? getStatistic('numberOfFinancedProjects') : 'site-general_unilend-stats-projects-value'|trans %}
                            <h3 class="promo-highlight">
                                <span class="ui-text-count" data-start-count="0" data-end-count="{{ valueProjects }}" data-total-time="3000" data-round-float="round"
                                      data-tween-count="easeOutCirc"></span>
                            </h3>
                            <p>{% trans %} site-general_unilend-stats-projects-description {% endtrans %}</p>
                        </div><!-- /.promo -->
                    </div>

                    <div class="col-lg-4 col-md-4">
                        <div class="promo">
                            <div class="promo-image">
                                {{ svgimage('#promo-money', '', 190, 190, 'none') | raw }}
                            </div>
                            {% set valueMoney = ('site-general_unilend-stats-money-value'|trans != 'site-general_unilend-stats-money-value') ? getStatistic('amountBorrowedInMillions') : 'site-general_unilend-stats-money-value'|trans %}
                            <h3 class="promo-highlight">
                                <span class="ui-text-count" data-start-count="0" data-end-count="{{ valueMoney }}" data-total-time="3000" data-round-float="round" data-tween-count="easeOutCirc">{{ valueMoney }}</span>
                                {% trans %} site-general_unilend-stats-money-value {% endtrans %}
                            </h3>
                            <p>{% trans %} site-general_unilend-stats-money-description {% endtrans %}</p>
                        </div><!-- /.promo -->
                    </div>

                    <div class="col-lg-4 col-md-4">
                        <div class="promo">
                            <div class="promo-image">
                                {{ svgimage('#promo-people', '', 190, 190, 'none') | raw }}
                            </div>
                            {% set valuePeople = ('site-general_unilend-stats-people-value'|trans != 'site-general_unilend-stats-people-value') ? getStatistic('numberOfLendersInCommunity')|localizednumber : 'site-general_unilend-stats-people-value'|trans %}
                            <h3 class="promo-highlight">
                                <span class="ui-text-count" data-start-count="0" data-end-count="{{ valuePeople }}" data-total-time="3000" data-round-float="round"
                                      data-tween-count="easeOutCirc">{{ valuePeople }}</span>
                            </h3>
                            <p>{% trans %} site-general_unilend-stats-people-description {% endtrans %}</p>
                        </div><!-- /.promo -->
                    </div>
                </div><!-- /.row -->
            </div><!-- /.site-wrap -->
        </section><!-- /.promos -->

        <section id="homeacq-section-testimonials" class="page-section">
            <div class="site-wrap">
                <h1 class="h2">{% trans %} site-general_testimonial-section-title {% endtrans %}</h1>

                {{ promoBattenberg.render({people: testimonialPeople}) }}

                <div class="row page-section">
                    <div class="btn-toolbar">
                        <a href="{{ path('projects_list') }}" class="btn-primary">
                            <span class="icon fa-angle-right"></span>
                            {% transchoice projects|length with {'%numberProjects%' : projects|length} %} project-list_title-ongoing-projects {% endtranschoice %}
                        </a>
                    </div>
                </div>
            </div><!-- /.site-wrap -->
        </section><!-- /.page-section -->

        <section id="homeacq-section-join" class="page-section bg-bg3">
            <div class="site-wrap">
                <h2 class="h2">{% trans %} site-general_unilend-advantages-title {% endtrans %}</h2>
                <div class="cta-cards">
                    <div class="row">
                        <div class="col-lg-5 push-lg-1 col-md-5 push-md-1">
                            <div class="card card-preter">
                                <h4>{% trans with {'%numberLenders%' : getStatistic('numberOfLendersInCommunity')|localizednumber } %} site-general_unilend-advantages-join-us-title {% endtrans %}</strong></h4>
                                <div class="card-text">
                                    <ul class="list-checked">
                                        {% trans  %} site-general_unilend-advantages-join-us-description {% endtrans %}
                                    </ul>
                                </div><!-- /.card-text -->
                                <a href="{{ path('lender_subscription_personal_information') }}" class="btn-primary btn-shape-md">{% trans %} site-general_unilend-advantages-welcome-offer-title {% endtrans %}</a>
                                {% if showWelcomeOffer == true %}
                                    <div class="stamp" data-watchscroll-action="enter" data-watchscroll-callback="addClass:ui-is-visible">
                                        {% trans %} site-general_unilend-advantages-welcome-offer-description {% endtrans %}
                                    </div><!-- /.stamp -->
                                {% endif %}
                            </div><!-- /.card -->
                        </div>
                        <div class="col-lg-5 col-md-5">
                            <div class="card card-emprunter">
                                <h4>{% trans %} site-general_unilend-advatanges-borrow-title {% endtrans %}</h4>
                                <div class="card-text">
                                    <ul class="list-checked">
                                        {% trans %} site-general_unilend-advatanges-borrow-description {% endtrans %}
                                    </ul>
                                </div><!-- /.card-text -->
                                <a href="{{ path('home_borrower') }}#homeemp-section-esim" class="btn-alternate btn-shape-md">{% trans %} site-general_unilend-advantages-borrower-test-button {% endtrans %}</a>
                            </div><!-- /.card -->
                        </div>
                    </div><!-- .row -->
                </div><!-- /.cta-cards -->
            </div><!-- /.site-wrap -->
        </section><!-- /.page-section -->

        <section id="homeacq-section-ethics" class="page-section">
            <div class="site-wrap">
                <h2 class="h2">{% trans %} site-general_ethics-section-title {% endtrans %}</h2>
                <div class="row">
                    <div class="col-lg-4 col-md-4">
                        <div class="promo">
                            <div class="promo-image">
                                {{ svgimage('#promo-transparancy', '', 190, 190, 'none') | raw }}
                            </div>
                            <h3>{% trans %} site-general_ethics-section-value-transparency-title {% endtrans %}</h3>
                            <p>{% trans %} site-general_ethics-section-value-transparancy-description {% endtrans %}</p>
                        </div><!-- /.promo -->
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <div class="promo">
                            <div class="promo-image">
                                {{ svgimage('#promo-balance', '', 190, 190, 'none') | raw }}
                            </div>
                            <h3>{% trans %} site-general_ethics-section-equality-title {% endtrans %}</h3>
                            <p>{% trans %} site-general_ethics-section-equality-description {% endtrans %}</p>
                        </div>
                    </div><!-- /.promo -->
                    <div class="col-lg-4 col-md-4">
                        <div class="promo">
                            <div class="promo-image">
                                {{ svgimage('#promo-protection', '', 190, 190, 'none') | raw }}
                            </div>
                            <h3>{% trans %} site-general_ethics-section-protection-title {% endtrans %}</h3>
                            <p>{% trans %} site-general_ethics-section-protection-description {% endtrans %}</p>
                        </div><!-- /.promo -->
                    </div>
                </div>
                <div class="row page-section-footer">
                    <div class="btn-toolbar">
                        <a href="{{ constant('Unilend\\Bundle\\FrontBundle\\Service\\RouteProvider::ROUTE_OUR_ETHICS') }}" class="btn-primary">{% trans %} site-general_ethics-section-read-all-button {% endtrans %}</a>
                    </div><!-- /.btn-toolbar -->
                </div>
            </div><!-- /.site-wrap -->
        </section><!-- /.page-section -->

        {{ render_esi(controller('UnilendFrontBundle:Main:footerReviews')) }}

    </article><!-- /.page -->
{% endblock %}
