{% extends 'collpub/_layout.html.twig' %}

{% set page = {
    id: 'collpub-project-request-summary',
    classNames: ''
} %}

{% block dashboardContent %}
    <section class="dashboard-tabs tabs">
        <div class="dashboard-tabs-content tab-content">
            <article class="dashboard-tab-pane">
                <div class="panel">
                    <header class="panel-header">
                        <h3>{{ project.title }}</h3>
                    </header>
                    <div class="simulator">
                        <div class="simulator-pane-inner recap">
                            <h4 class="h4">Récapitulatif</h4>
                            <div class="row columns-with-space">
                                <dl class="col-sm-4 col-md-6 col-lg-6">
                                    <dt>Montant</dt>
                                    <dd><strong>{{ project.amount|localizednumber }}&nbsp;€</strong></dd>
                                </dl>
                                <dl class="col-sm-4 col-md-6 col-lg-6">
                                    <dt>Maturité</dt>
                                    <dd><strong>{{ project.period }} ans</strong></dd>
                                </dl>
                            </div>
                            <div class="row columns-with-space">
                                <dl class="col-sm-4 col-md-6 col-lg-6">
                                    <dt>Type de financement</dt>
                                    <dd><strong>{{ ('product-name_' ~ product.label)|trans }}</strong></dd>
                                </dl>
                                <dl class="col-sm-4 col-md-6 col-lg-6">
                                    <dt>Fin de période de tirage</dt>
                                    <dd><strong>{{ project.dateFin|localizeddate('short', 'none') }}</strong></dd>
                                </dl>
                            </div>
                            <h4 class="h4 margin-20-t">Description</h4>
                            <div class="row">
                                <em>{{ project.comments|nl2br }}</em>
                            </div>
                        </div><!-- /.simulator-pane-inner -->
                        <footer class="simulator-pane-inner actions bg-p1 c-bg5 text-align-center">
                            <a href="{{ path('collpub_project_request_cancel', {'hash': project.hash}) }}" class="btn-abandon btn-alternate" data-equal-width>
                                Abandonner la demande
                            </a>
                            <a href="{{ path('collpub_loans') }}" class="btn-prospect btn-alternate" data-equal-width>
                                Finir plus tard
                            </a>
                            <a href="{{ path('collpub_project_request_submit', {'hash': project.hash}) }}" type="submit" class="btn-submit btn-alternate" data-equal-width>
                                Déposer le dossier
                            </a>
                        </footer><!-- /.simulator-pane-inner -->
                    </div><!-- /.simulator -->
                </div>
            </article><!-- /.dashboard-tab-pane -->
        </div><!-- /.dashboard-tabs-content -->
    </section><!-- /.dashboard-tabs -->
{% endblock %}
