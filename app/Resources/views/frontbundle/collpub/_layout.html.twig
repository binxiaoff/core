{% extends 'layouts/_layout.html.twig' %}

{% block siteContent %}
    {% set partner = partner(app.user) %}

    <article{% if page.id is not empty %} id="{{ page.id }}"{% endif %} class="dashboard{% if page.classNames is not empty %} {{ page.classNames }}{% endif %}">
        <div class="dashboard-inner">
            <div class="site-wrap">
                <div class="col-menu">
                    <nav class="dashboard-nav">
                        {% block dashboardNav %}
                            <ul>
                                <li role="presentation" class="dashboard-nav-loans{% if app.request.get('_route') == 'collpub_loans' %} active{% endif %}">
                                    <a href="{{ path('collpub_loans') }}">
                                        <span class="icon fa-project-u"></span>
                                        <span class="label">Liste projets</span>
                                    </a>
                                </li>
                                <li role="presentation" class="dashboard-nav-projects{% if app.request.get('_route')|slice(0, 23) == 'collpub_project_request' %} active{% endif %}">
                                    <a href="{{ path('collpub_project_request') }}">
                                        <span class="icon fa-pen-u"></span>
                                        <span class="label">Dépôt projet</span>
                                    </a>
                                </li>
                                <li role="presentation" class="dashboard-nav-profile{% if app.request.get('_route') == 'collpub_profile' %} active{% endif %}">
                                    <a href="{{ path('collpub_profile') }}">
                                        <span class="icon fa-profile-u"></span>
                                        <span class="label">Profil</span>
                                    </a>
                                </li>
                            </ul>
                        {% endblock %}
                    </nav>
                </div><!-- /.col-menu -->
                <div class="col-content dashboard-content">
                    {% block dashboardContent %} {% endblock %}
                </div><!-- /.col-content -->
            </div><!-- /.site-wrap -->
        </div><!-- /.dashboard-inner -->
    </article><!-- /.dashboard -->
{% endblock %}
