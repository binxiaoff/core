{% extends 'layouts/_layout.html.twig' %}

{% set bodyClassNames = 'layout-page-single' %}

{% block siteContent %}
    <article{% if page.id is defined %} id="{{ page.id }}"{% endif %} class="page page-single">
        {% block pageHeader %}
            <header class="page-header">
                <div class="hero-wrap"{% if cms.header_image is not empty %} style="background-image: url('{{ uploadedImage(cms.header_image) }}')"{% endif %}>
                    <div class="site-wrap">
                        {% block pageHeaderInner %}
                            <h1 class="page-title">{% if page.displayTitle is defined %}{{ page.displayTitle }}{% else %}{{ page.title }}{% endif %}</h1>
                            {% block extendPageHeader %}{% endblock %}
                        {% endblock %}
                    </div><!-- /.site-wrap -->

                    {% include 'partials/list_socialmedia.html.twig' %}
                </div><!-- /.hero-wrap -->
            </header><!-- /.page-header -->
        {% endblock %}

        {% block pageContent %}
            <div class="page-content">
                <nav class="page-navigation">
                    <div class="site-wrap">
                        <ul data-nav-dropdown-menu="mobile">
                            {% for nav in navigation %}
                                <li role="presentation" class="{% if nav.selected %}active{% endif %}{% if nav.highlighted_lender %} c-p1 {% elseif nav.highlighted_borrower %}c-p2 {% endif %}">
                                    {% if nav.slug == constant('\\Unilend\\Bundle\\FrontBundle\\Controller\\MainController::SLUG_PAGE_BECOME_BORROWER') %}
                                        <a href="{{ path('home_borrower') }}#homeemp-section-esim">{{ nav.label }}</a>
                                    {% elseif nav.slug == constant('\\Unilend\\Bundle\\FrontBundle\\Controller\\MainController::SLUG_PAGE_BECOME_LENDER') and app.user is defined and is_granted('ROLE_LENDER') %}
                                        <a href="{{ path('lender_dashboard') }}">{% trans %} header_nav-lender-dashboard-logged-in {% endtrans %}</a>
                                    {% else %}
                                        <a href="{{ path(nav.slug) }}">{{ nav.label }}</a>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    </div><!-- /.site-wrap -->
                </nav><!-- /.page-navigation -->

                {{ cms.content|raw }}
            </div><!-- /.page-content -->
        {% endblock %}

        {% if page.next is not empty %}
            <footer class="page-footer">
                <div class="page-navigate-next-page" style="background-image: url('{{ uploadedImage(page.next.header_image) }}');">
                    <a href="{{ path(page.next.slug) }}">
                        <div class="site-wrap">
                            <div class="label">
                                <div class="small">Lire la suite</div>
                                <div class="big">{{ page.next.label }}</div>
                            </div>
                        </div><!-- /.site-wrap -->
                    </a>
                </div><!-- /.page-navigate-next-page -->
            </footer><!-- /.page-footer -->
        {% endif %}

        {% include 'partials/scroll_more.html.twig' %}

    </article><!-- /.page -->
{% endblock %}
