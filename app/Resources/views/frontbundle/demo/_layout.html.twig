{% extends 'layouts/_layout.html.twig' %}

{% block siteContent %}
    {% set partner = partner(app.user) %}

    <article{% if page.id is not empty %} id="{{ page.id }}"{% endif %} class="dashboard{% if page.classNames is not empty %} {{ page.classNames }}{% endif %}">
        <div class="dashboard-inner">
            <div class="site-wrap">
                <div class="col-menu">
                    <nav class="dashboard-nav">
                        {% block dashboardNav %}
                            <ul>
                                <li role="presentation" class="dashboard-nav-loans{% if app.request.get('_route') == 'demo_loans' %} active{% endif %}">
                                    <a href="{{ path('demo_loans') }}">
                                        <span class="icon fa-dashboard-u"></span>
                                        <span class="label">{% trans %} demo-nav_loans {% endtrans %}</span>
                                    </a>
                                </li>
                                <li role="presentation" class="dashboard-nav-projects{% if app.request.get('_route') == 'demo_projects' %} active{% endif %}">
                                    <a href="{{ path('demo_projects') }}">
                                        <span class="icon fa-project-u"></span>
                                        <span class="label">{% trans %} demo-nav_projects {% endtrans %}</span>
                                    </a>
                                </li>
                                {% if is_granted(['ROLE_BORROWER', 'ROLE_PARTNER']) %}
                                    <li role="presentation" class="dashboard-nav-project-request{% if app.request.get('_route') in ['demo_project_request', 'demo_project_request_details', 'demo_project_request_end'] %} active{% endif %}">
                                        <a href="{{ path('demo_project_request') }}">
                                            <span class="icon fa-pen-u"></span>
                                            <span class="label">{% trans %} demo-nav_project-request {% endtrans %}</span>
                                        </a>
                                    </li>
                                {% endif %}
                                <li role="presentation" class="dashboard-nav-statistics{% if app.request.get('_route') == 'demo_statistics' %} active{% endif %}">
                                    <a href="{{ path('demo_statistics') }}">
                                        <span class="icon fa-linegraph-u"></span>
                                        <span class="label">{% trans %} demo-nav_statistics {% endtrans %}</span>
                                    </a>
                                </li>
                                <li role="presentation" class="dashboard-nav-profile{% if app.request.get('_route') == 'demo_profile' %} active{% endif %}">
                                    <a href="{{ path('demo_profile') }}">
                                        <span class="icon fa-profile-u"></span>
                                        <span class="label">{% trans %} demo-nav_profile {% endtrans %}</span>
                                    </a>
                                </li>
                            </ul>
                        {% endblock %}
                    </nav>
                </div><!-- /.col-menu -->
                <div class="col-content dashboard-content">
                    {% block dashboardContent %} {% endblock %}
                </div><!-- /.col-content -->
            </div><!-- /.site-wrap -->
        </div><!-- /.dashboard-inner -->
    </article><!-- /.dashboard -->
{% endblock %}
