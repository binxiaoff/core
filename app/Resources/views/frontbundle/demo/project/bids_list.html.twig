<section id="project-section-myoffers" class="page-section">
    <div class="tabs">
        <div class="section-tabs-nav">
            <header>
                <h3 id="project-myoffers" class="h3">Tous les autres offres</h3>
            </header>
        </div><!-- /.section-tabs-nav -->
        <div class="section-tabs-content tab-content">
            <div id="myoffers-inprogress" role="tabpanel" class="tab-pane active" aria-labelledby="project-myoffers-inprogress project-myoffers">
                <table class="table-myoffers">
                    <tbody>
                    <tr class="my-offers-bid-row">
                        <td>Status</td>
                        <td>Prêteur</td>
                        <td>Taux de référence</td>
                        <td>Taux de référence</td>
                        <td>Marge</td>
                        <td>Commission ponctuelle</td>
                        <td>Commission récurrente</td>
                        <td>Je souhaite être agent</td>
                    </tr>
                    {% for offer in bids %}
                        {% if offer.wallet != wallet %}
                        <tr>
                            <td>{% if offer.status == 0 %} En cours {% elseif offer.status == 1 %} Accepté {% else %} Refusé {% endif %}</td>
                            <td>{{ bid.wallet.idClient.company.name }}</td>
                            <td>{{ (offer.amount / 100)|localizednumber }}&nbsp;€</td>
                            <td>{{ ('interest-rate-indice_' ~ offer.rate.type)|trans }}</td>
                            <td>{{ offer.rate.margin|localizednumberwithprecision(2) }}&nbsp;%</td>
                            <td>{{ offer.oneTimeFeeTotalRate|localizednumberwithprecision(2) }}&nbsp;%</td>
                            <td>{{ offer.recurringFeeTotalRate|localizednumberwithprecision(2) }}&nbsp;%</td>
                            <td>{% if offer.ordre is null %} Non {% elseif offer.status == 1 %} Accepté {% else %} Oui {% endif %}</td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table><!-- /.table-myoffers -->
            </div><!-- /.tab-pane -->
        </div><!-- /.section-tabs-content -->
    </div><!-- /tabs -->
</section><!-- /.page-section -->
