{# Borrower dashboard #}
{% extends 'layouts/_layout.twig' %}

{% block siteHeader %}
    {% include 'partials/site/borrower-header-dashboard.twig' %}
{% endblock %}


{% block siteContent %}

    <article{% if page.id is not empty %} id="{{ page.id }}"{% endif %} class="dashboard{% if page.classNames is not empty %} {{ page.classNames }}{% endif %}">
        <div class="dashboard-inner">
            <div class="site-wrap">
                <div class="col-menu">
                    <nav class="dashboard-nav">
                        {% block dashboardNav %}
                            <ul>
                                <li role="presentation" class="dashboard-nav-dashboard"><a href="{{ route('user/emprunteur/dashboard') }}"><span class="icon fa-project-u"></span><span class="label">Vos projets</span></a></li>

                                <li role="presentation" class="dashboard-nav-operations {% if '/user_preter_operations.html' == page.permalink %}active{% endif %}"><a href="{{ route('user/emprunteur/operations') }}"><span class="icon fa-operations-u"></span><span class="label">Vos op√©rations</span></a></li>

                                <li role="presentation" class="dashboard-nav-profile {% if ' ' == page.permalink %}active{% endif %}"><a href="{{ route('user/emprunteur/profil') }}"><span class="icon fa-profile-u"></span><span class="label">Profil</span></a></li>

                                <li role="presentation" class="dashboard-nav-contact {% if ' ' == page.permalink %}active{% endif %}"><a href="{{ route('user/emprunteur/contact') }}"><span class="icon fa-pen-u"></span><span class="label">Contact</span></a></li>

                                <li role="presentation" class="dashboard-nav-faq {% if ' ' == page.permalink %}active{% endif %}"><a href="{{ route('user/emprunteur/faq') }}"><span class="icon fa-question-circle-o"></span><span class="label">FAQ</span></a></li>

                            </ul>
                        {% endblock %}
                    </nav>
                </div><!-- /.col-menu -->
                <div class="col-content dashboard-content">
                    {% block dashboardContent %} {% endblock %}
                </div><!-- /.col-content -->
            </div><!-- /.site-wrap -->
        </div><!-- /.dashboard-inner -->
    </article><!-- /.dashboard -->

{% endblock %}
