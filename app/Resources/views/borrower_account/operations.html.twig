                                                    <option value="3">Affectation aux preteurs de la mensualité</option>
                                                    <option value="4">Prélèvement mensualité</option>
                                                    <option value="5">Virement des fonds</option>
                                                    <option value="6">Octroi du financement</option>
                                                    <option value="7">Remboursement anticipé</option>
                                                    <option value="8">Affectation aux préteurs du remboursement anticipé</option>
                                                </optgroup>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-4">
                                        <label class="grey-label">{{ 'borrower-operation_filter-by-project'|trans|capitalize }}</label>
                                        <div class="row">
                                            <select name="filter-project" class="input-field">
                                                <optgroup>
                                                    <option value="all">Tous les projets</option>
                                                    <option value="project-1">@TODO - current projects - 1</option>
                                                    <option value="project-2">@TODO - current projects - 2</option>
                                                </optgroup>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form><!-- /.form-operations-filters -->

                        <div class="table-scroll">
                            <table class="table table-myoperations">
                                <thead class="table-sortable-columns">
                                <tr>
                                    <th class="table-column table-myoperations-borrower-item-operation">
                                        <span class="label">{% trans %}borrower-operation_operation{% endtrans %}</span>
                                    </th>
                                    <th class="table-column cell-right table-myoperations-borrower-item-projet">
                                        <span class="label">{% trans %}borrower-operation_project{% endtrans %}</span>
                                    </th>
                                    <th class="table-column cell-right table-myoperations-borrower-item-date">
                                        <span class="label">{% trans %}borrower-operation_operation-date{% endtrans %}</span>
                                    </th>
                                    <th class="table-column cell-right table-myoperations-borrower-item-amount">
                                        <span class="label">{% trans %}borrower-operation_amount{% endtrans %}</span>
                                    </th>
                                    <th class="table-column cell-right table-myoperations-borrower-item-detail">
                                        <span class="label">{% trans %}borrower-operation_detail{% endtrans %}</span>
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for i, op in operations %}
                                    {% set classAmount = op.amount > 0 ? 'ui-amount-positive' : 'ui-amount-negative' %}
                                    {% set classBalance = op.balance > 0 ? 'ui-balance-positive' : 'ui-balance-negative' %}

                                    <tr {{ general.attrsString({ 'id': 'operation-' ~ op.id }) }}
                                            {% if op.details is not empty %}
                                                data-details='{{ op.details|json_encode|escape('html_attr') }}'
                                            {% endif %}
                                            class="table-myoperations-item {{ classAmount }} {{ classBalance }}">
                                        <td class="table-myoperations-item-type">{{ op.typeName }}</td>
                                        <td class="table-myoperations-item-contract cell-right">{{ op.contractId }}</td>
                                        <td class="table-myoperations-item-date cell-right">{{ op.date|date('d/m/y') }}</td>
                                        <td class="table-myoperations-item-amount cell-right">{{ op.amount|nbsp }}€</td>
                                        <td class="table-myoperations-item-balance cell-right">{% if op.export == 1 %} <a href="#todo" class="export">exporter</a> {% endif %}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table><!-- /.table-myoperations -->
                        </div><!-- /.table-scroll -->
                    </div><!-- /.panel-content -->
                </div><!-- /.panel -->
            </article><!-- /#myoperations.tab-pane -->


