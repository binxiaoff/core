                <li role="presentation"><a href="#mydocuments" role="tab" data-toggle="tab">{{ 'borrower-document_documents'|trans|capitalize }}</a></li>
            </ul>
        </div>
        <div class="dashboard-tabs-content tab-content">
            {# MY OPERATIONS #}
            <article id="operations" role="tabpanel" class="dashboard-tab-pane tab-pane active">
                <div class="panel panel-operations-operations">
                    <header class="panel-header">
                        <h3 class="panel-title">{{ 'borrower-operation_all-your-operations'|trans|capitalize }}</h3>
                        <div class="panel-controls">
                            <a href="#todo" class="btn-default"><span class="icon fa-print-u32"></span><span class="label">{{ 'borrower-operation_print'|trans|capitalize }}</span></a>
                            <a href="#todo" class="btn-default"><span class="icon fa-excel-u32"></span><span class="label">{{ 'borrower-operation_csv-export'|trans }}</span></a>
                        </div>
                    </header><!-- /.panel-header -->
                    <div class="panel-content">

                        <form id="form-filters-operations" action="{{ route('user/preter/operations/operations/filter') }}" method="get" class="form-filters" data-ajax>
                            <div id="filters" class="row row-multi-col-computer collapse in">
                                <div class="row">
                                    <div class="form-field">
                                        <div class="field-label">
                                            <label>{{ 'borrower-operation_choose-a-period'|trans|capitalize }}</label>
                                        </div><!-- /.field-label -->
                                        <div class="row input-fields">
                                            <div class="col-lg-3 col-md-3 col-sm-4">
                                                <label class="grey-label">{{ 'borrower-operation_range'|trans|capitalize }}</label>
                                                <div class="row">
                                                    <select name="filter-slide" class="input-field">
                                                        <optgroup>
                                                            <option value="1">1 {{ 'borrower-operation_month'|trans|capitalize }}</option>
                                                            <option value="3">3 {{ 'borrower-operation_month'|trans|capitalize }}</option>
                                                            <option value="6">6 {{ 'borrower-operation_month'|trans|capitalize }}</option>
                                                            <option value="12">12 {{ 'borrower-operation_month'|trans|capitalize }}</option>
                                                        </optgroup>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-sm-4">
                                                <label class="grey-label">{{ 'borrower-operation_year'|trans|capitalize }}</label>
                                                <div class="row">
                                                    <select name="filter-year" class="input-field">
                                                        <optgroup>
                                                            {% for year in  2013.."now"|date("Y") %}
                                                            <option value="{{ year }}">{{ year }}</option>
                                                            {% endfor %}
                                                        </optgroup>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-sm-4">
                                                <label class="grey-label">{{ 'borrower-operation_customized-date'|trans|capitalize }}</label>
                                                <div class="row">
                                                    <div class="input-group set-right">
                                                        <input type="text" id="filter-start" name="filter[start]" value="{{ default_filter_date.start }}" placeholder="Début" class="input-field ui-has-datepicker" />
                                                        <div class="btn-group">
                                                            <label for="filter-start"><span class="icon fa-calendar-u32 c-p1"><span class="sr-only">{{ 'borrower-operation_select-start-date'|trans|capitalize }}</span></span></label>
                                                        </div><!-- /.btn-group -->
                                                    </div><!-- /.input-group -->
                                                </div>
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-sm-4">
                                                <label>&nbsp;</label>
                                                <div class="row">
                                                    <div class="input-group set-right">
                                                        <input type="text" id="filter-end" name="filter[end]" value="{{ default_filter_date.end }}" placeholder="Fin" class="input-field ui-has-datepicker"/>
                                                        <div class="btn-group">
                                                            <label for="filter-end"><span class="icon fa-calendar-u32 c-p1"><span class="sr-only">{{ 'borrower-operation_select-end-date'|trans|capitalize }}</span></span></label>
                                                        </div><!-- /.btn-group -->
                                                    </div><!-- /.input-group -->
                                                </div>
                                            </div>
                                        </div><!-- /.input-fields -->
                                    </div><!-- /.form-field -->
                                </div>
                                <div class="row" style="padding:0;">
                                    <div class="form-field">
                                        <div class="field-label">
                                            <label>{{ 'borrower-operation_choose-one-or-several-filter'|trans|capitalize }}</label>
                                        </div><!-- /.field-label -->
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-4">
                                        <label class="grey-label">{{ 'borrower-operation_filter-by-operation'|trans|capitalize }}</label>
