{% extends 'borrower_account/_borrower_account_base.html.twig' %}

{# Page data #}
{% set bodyId = '' %}
{% set page = {
id: 'user-borrower-profile',
title: 'Emprunteur / Profil',
permalink: path('borrower_account_contact'),
classNames: 'user-borrower-profile'
} %}

{% block dashboardContent %}

    <div class="dashboard-tabs">
        <div class="dashboard-tabs-content">
            <div role="tabpanel" class="dashboard-tab-pane">
                <article class="panel">
                    <header class="panel-header">
                        <h3>{{ 'borrower-contact_contact-us'|trans|capitalize }}</h3>
                    </header>
                        <section class="page-section">
                            {% if app.session.flashBag.has('error') %}
                                <div class="message-error">
                                    {% for error in app.session.flashBag.get('error') %}
                                        <p>{{ error }}</p>
                                    {% endfor %}
                                </div>
                            {% elseif app.session.flashBag.has('success') %}
                                <div class="message-success">
                                    {% for success in app.session.flashBag.get('success') %}
                                        <p>{{ success }}</p>
                                    {% endfor %}
                                </div>
                            {% endif %}
                            {{ form_start(contact_form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                            <div class="row row-multi-col">
                                <div class="col-lg-6 col-md-6 col-sm-4">
                                    <div class="form-field">
                                        <label for="contact-message-lastname">{{ 'borrower-contact_siren'|trans|upper }}</label>
                                        {{ company_siren }}
                                    </div><!-- /.form-field -->
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-4">
                                    <div class="form-field">
                                        <label for="contact-message-lastname">{{ 'borrower-contact_company-name'|trans|capitalize }}</label>
                                        {{ company_name }}
                                    </div><!-- /.form-field -->
                                </div>
                            </div>
                            <div class="row row-multi-col">
                                <div class="col-lg-6 col-md-6 col-sm-4">
                                    {{ form_row(contact_form.last_name) }}
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-4">
                                    {{ form_row(contact_form.first_name) }}
                                </div>
                            </div>
                            <div class="row row-multi-col">
                                <div class="col-lg-6 col-md-6 col-sm-4">
                                    {{ form_row(contact_form.mobile) }}
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-4">
                                    {{ form_row(contact_form.email) }}
                                </div>
                            </div>
                            {{ form_row(contact_form.subject) }}
                            {{ form_row(contact_form.message) }}

                            <div class="row">
                                <div class="form-field">
                                    <label for="form-preter-fichier-identitÃ©">{{ 'borrower-contact_contact-attachment'|trans|capitalize }}</label>

                                    <div class="custom-input-file" id="form-borrower-contact-attachment" data-fileattach-maxfiles="1"
                                         data-fileattach data-fileattach-inputname="attachment"
                                         data-formvalidation-input data-formvalidation-required='input[type="file"][name="attachment"]'></div>
                                    <ul class="ui-formvalidation-messages"></ul>
                                </div>
                            </div>
                            <div class="row">
                                <button type="submit" class="btn-primary ui-dialog-confirm">{{ 'borrower-contact_send'|trans|capitalize }}</button>
                            </div>
                            {{ form_end(contact_form) }}
                        </section><!-- /.page-section -->
                </article><!-- /.panel -->
            </div><!-- /#profile-info.dashboard-tab-pane -->
        </div><!-- /.dashboard-tabs-content -->
    </div><!-- /.dashboard-tabs -->

{% endblock %}
