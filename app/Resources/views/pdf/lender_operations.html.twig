{% extends 'pdf/layout.html.twig' %}

{% block cssFiles %}
    {{ parent() }}
    <style>
        .item-amount, .item-balance {
            text-align: right;
        }
        .item-date {
            text-align: left;
        }
        .item-operation {
            width: 25%;
        }
        .item-project {
            width: 20%;
        }
    </style>
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-6 col-lg-6">
            <p>
                <b>Unilend – Société Française pour le financement des PME</b><br/>
                6 Rue du général Clergerie<br/>
                75116 Paris
            </p>
        </div>
        <div class="col-md-6 col-lg-6">
            <p class="text-align-right">
                <b>{% trans with {'%date%' : 'now'|date('d/m/Y')} %}lender-operations_pdf-location-date{% endtrans %}</b><br/>
                {% if company is empty %}
                    <b>{{ client.prenom }} {{ client.nom }}</b><br/>
                    {{ clientAddress.adresse1 }}<br>
                    {{ clientAddress.cp }} {{ clientAddress.ville }}
                {% else %}
                    <b>{{ company.name }}</b><br/>
                    <b>{{ client.prenom }} {{ client.nom }}</b><br/>
                    {{ company.adresse1 }} <br/>
                    {{ company.zip }} {{ company.city }}
                {% endif %}
            </p>

        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-lg-8">
            <p>
                <b style="font-size: 1rem; line-height: 1.5rem;">{% trans with { 'idClient' : client.idClient } %}lender-operations_pdf-subject-line{% endtrans %}</b><br/>
                {% trans %}lender-operations_pdf-owner-line{% endtrans %} {{ client.prenom }} {{ client.nom }}
            </p>
        </div>
    </div>

    <div class="spacer"></div>

    <table class="table">
        <thead>
            <tr>
                <th class="item-operation">{% trans %} lender-operations_operations-table-operation-column {% endtrans %}</th>
                <th class="item-project">{% trans %} lender-operations_operations-table-project-column {% endtrans %}</th>
                <th class="item-contract">{% trans %} lender-operations_loans-table-contract-column {% endtrans %}</th>
                <th class="item-date">{% trans %} lender-operations_operations-table-date-column {% endtrans %}</th>
                <th class="item-amount">{% trans %} lender-operations_operations-table-amount-column {% endtrans %}</th>
                <th class="item-balance">{% trans %} lender-operations_operations-table-account-balance-column {% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
            {% for op in lenderOperations %}

                {% if (loop.index is odd) %}
                    {% set backgroundClass = 'bg-bg3' %}
                {% else %}
                    {% set backgroundClass = '' %}
                {% endif %}

                {% if (op.amount > 0) %}
                    {% set colorClass = 'c-success' %}
                {% else %}
                    {% set colorClass = 'c-error' %}
                {% endif %}

                <tr class="transaction-{{ op.label }} {{ backgroundClass }}">
                    <td class="item-operation">
                        {{ ('lender-operations_operation-label-'~op.label)|trans }}
                    </td>
                    <td class="item-project">
                        {{ op.title }}
                    </td>
                    <td class="item-contract">
                        {{ op.id_loan }}
                    </td>
                    <td class="item-date">
                        {{ op.date|date('d/m/y') }}
                    </td>
                    <td class="item-amount {{ colorClass }}">
                        {{ op.amount|localizedcurrency('EUR') }}&nbsp;€
                    </td>
                    <td class="item-balance">
                        {{ op.available_balance|localizedcurrency('EUR') }}&nbsp;€
                    </td>
                </tr>
                {% if op.detail is defined %}
                    {#<tr class="transaction-details transaction-{{ op.label }}-details {{ backgroundClass }}">#}
                        {#<td colspan="6">{{ op.detail.label }}</td>#}
                    {#</tr>#}
                    {% for item in op.detail.items %}
                        {% if (item.value > 0) %}
                            {% set colorClass = 'c-success' %}
                        {% else %}
                            {% set colorClass = 'c-error' %}
                        {% endif %}
                        <tr class="details transaction-{{ op.label }}-details {{ backgroundClass }} {% if loop.index == op.detail|length + 1 %} last {% endif %}">
                            <td colspan="3">{{ item.label }}</td>
                            <td>&nbsp;</td>
                            <td style="text-align: right" class="{{ colorClass }}">{{ item.value|localizednumber }}&nbsp;€</td>
                            <td>&nbsp;</td>
                        </tr>
                    {% endfor %}
                {% endif %}
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
