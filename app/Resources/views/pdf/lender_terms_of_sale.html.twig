{% extends 'pdf/layout.html.twig' %}

{% block cssFiles %}
    <link rel="stylesheet" type="text/css" href="{{ staticUrl }}/styles/default/pdf/style.css" media="all">
{% endblock %}

{% block header %}{% endblock %}

{% block content %}
    <div class="cgu-wrapper">
        <div class="main" style="padding-bottom: 0px;">
            <div class="shell" style="width:750px;">
                <div class="logo"></div>
                {{ content['contenu-cgu']|raw }}
                <div style="page-break-after: always;"></div>
                {{ content['debtCollectionMandate']|raw }}
                {% if content['debtCollectionMandateWithExitingLoans'] is defined and content['debtCollectionMandateWithExitingLoans'] is not empty %}
                    <div style="page-break-after: always;"></div>
                    {{ content['debtCollectionMandateWithExitingLoans']|raw }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
