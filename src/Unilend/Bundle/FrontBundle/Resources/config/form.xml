<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="unilend.form.simple_project" class="Unilend\Bundle\FrontBundle\Form\SimpleProjectType">
            <tag name="form.type" />
            <argument type="service" id="unilend.service.entity_manager" />
            <argument type="service" id="translator" />
        </service>

        <service id="unilend.form.borrower_contact" class="Unilend\Bundle\FrontBundle\Form\BorrowerContactType">
            <tag name="form.type" />
            <argument type="service" id="unilend.service.entity_manager" />
            <argument type="service" id="unilend.service.translation_manager" />
            <argument type="service" id="security.token_storage" />
            <argument>%kernel.default_locale%</argument>
        </service>
    </services>
</container>