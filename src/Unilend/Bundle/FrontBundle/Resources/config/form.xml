<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="unilend.form.simple_project" class="Unilend\Bundle\FrontBundle\Form\SimpleProjectType">
            <tag name="form.type" />
            <argument type="service" id="unilend.service.entity_manager" />
            <argument type="service" id="translator" />
        </service>

        <service id="unilend.form.borrower_contact" class="Unilend\Bundle\FrontBundle\Form\BorrowerContactType">
            <tag name="form.type" />
            <argument type="service" id="unilend.service.entity_manager" />
            <argument type="service" id="security.token_storage" />
            <argument>%kernel.default_locale%</argument>
        </service>

        <service id="unilend.form.partner_contact" class="Unilend\Bundle\FrontBundle\Form\PartnerContactType">
            <tag name="form.type" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="security.token_storage" />
            <argument>%kernel.default_locale%</argument>
        </service>

        <service id="unilend.form.lender_withdrawal" class="Unilend\Bundle\FrontBundle\Form\LenderWithdrawalType">
            <tag name="form.type" />
        </service>

        <service id="unilend.form.company_identity" class="Unilend\Bundle\FrontBundle\Form\LenderSubscriptionProfile\CompanyIdentityType">
            <tag name="form.type" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="translator" />
        </service>

        <service id="unilend.form.component.gender_type" class="Unilend\Bundle\FrontBundle\Form\Components\GenderType">
            <tag name="form.type" />
            <argument type="service" id="translator" />
        </service>

        <service id="unilend.form.component.countries_type" class="Unilend\Bundle\FrontBundle\Form\Components\CountriesType">
            <tag name="form.type" />
            <argument type="service" id="unilend.service.location_manager" />
        </service>

        <service id="unilend.form.component.nationalities_type" class="Unilend\Bundle\FrontBundle\Form\Components\NationalitiesType">
            <tag name="form.type" />
            <argument type="service" id="unilend.service.location_manager" />
        </service>

        <service id="unilend.form.funds_origin" class="Unilend\Bundle\FrontBundle\Form\LenderSubscriptionProfile\OriginOfFundsType">
            <tag name="form.type" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="unilend.form.email" class="Unilend\Bundle\FrontBundle\Form\LenderSubscriptionProfile\ClientEmailType">
            <tag name="form.type" />
            <argument type="service" id="translator" />
        </service>

        <service id="unilend.form.password" class="Unilend\Bundle\FrontBundle\Form\ClientPasswordType">
            <tag name="form.type" />
            <argument type="service" id="translator" />
        </service>

        <service id="unilend.form.person_identity" class="Unilend\Bundle\FrontBundle\Form\LenderSubscriptionProfile\PersonType">
            <tag name="form.type" />
            <argument type="service" id="translator" />
        </service>

        <service id="unilend.form.legal_entity_identity" class="Unilend\Bundle\FrontBundle\Form\LenderSubscriptionProfile\LegalEntityType">
            <tag name="form.type" />
            <argument type="service" id="translator" />
        </service>
    </services>
</container>