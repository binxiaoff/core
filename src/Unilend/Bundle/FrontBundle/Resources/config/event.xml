<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="unilend.frontbundle.security_subscriber" class="Unilend\Bundle\FrontBundle\EventSubscriber\LoginSubscriber">
            <argument type="service" id="unilend.service.entity_manager" />
            <argument type="service" id="unilend.service.notification_manager" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="unilend.frontbundle.source_subscriber" class="Unilend\Bundle\FrontBundle\EventSubscriber\SourceSubscriber">
            <argument type="service" id="unilend.frontbundle.service.source_manager" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
