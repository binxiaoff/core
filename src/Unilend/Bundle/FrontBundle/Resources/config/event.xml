<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="unilend.frontbundle.event.source_subscriber" class="Unilend\Bundle\FrontBundle\EventSubscriber\SourceSubscriber">
            <argument type="service" id="unilend.frontbundle.service.source_manager" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="unilend.frontbundle.event.data_layer_subscriber" class="Unilend\Bundle\FrontBundle\EventSubscriber\DataLayerSubscriber">
            <argument type="service" id="unilend.frontbundle.service.data_layer_collector" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="unilend.frontbundle.event.tos_subscriber" class="Unilend\Bundle\FrontBundle\EventSubscriber\TermsOfSaleSubscriber">
            <argument type="service" id="unilend.service.terms_of_sale_manager" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="unilend.frontbundle.event.exception_subscriber" class="Unilend\Bundle\FrontBundle\EventSubscriber\ExceptionSubscriber">
            <argument type="service" id="kernel"/>
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="unilend.frontbundle.event.sonata_seo_subscriber" class="Unilend\Bundle\FrontBundle\EventSubscriber\SonataSeoDataSubscriber">
            <argument type="service" id="unilend.frontbundle.seo_manager" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="unilend.frontbundle.event.response_listener" class="Unilend\Bundle\FrontBundle\EventSubscriber\ResponseListener">
            <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse" />
        </service>

        <service id="unilend.frontbundle.event.redirection_subscriber" class="Unilend\Bundle\FrontBundle\EventSubscriber\RedirectionSubscriber">
            <argument type="service" id="unilend.frontbundle.service.redirection_handler" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
