<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="unilend_app.twig_extension" class="Unilend\Bundle\FrontBundle\Twig\FrontBundleExtension" public="false">
            <tag name="twig.extension" />
            <argument>%router.request_context.host%</argument>
            <argument>%router.request_context.scheme%</argument>
            <argument type="service" id="unilend.service.statistics_Manager" />
        </service>

        <service id="unilend.service.testimonial_manager" class="Unilend\Bundle\FrontBundle\Service\TestimonialManager">
            <argument type="service" id="unilend.service.entity_manager"/>
            <argument type="service" id="unilend.service.translation_manager"/>
        </service>

        <service id="unilend.service.user_provider" class="Unilend\Bundle\FrontBundle\Security\User\UserProvider">
            <argument type="service" id="unilend.service.entity_manager"/>
            <argument type="service" id="unilend.service.client_manager"/>
        </service>
    </services>
</container>
