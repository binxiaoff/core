<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Unilend services -->
        <service id="unilend.service.autobid_settings_manager" class="Unilend\Service\AutoBidSettingsManager">
            <argument type="service" id="unilend.service.entity_manager"/>
            <argument type="service" id="unilend.service.client_settings_manager"/>
            <argument type="service" id="unilend.service.client_manager"/>
            <argument type="service" id="unilend.service.notification_manager"/>
            <argument type="service" id="unilend.service.lender_manager"/>
        </service>

        <service id="unilend.service.bid_manager" class="Unilend\Service\BidManager">
            <argument type="service" id="unilend.service.entity_manager"/>
            <argument type="service" id="unilend.service.notification_manager"/>
            <argument type="service" id="unilend.service.autobid_settings_manager"/>
            <argument type="service" id="unilend.service.lender_manager"/>
            <call method="setLogger">
                <argument type="service" id="logger" on-invalid="null"/>
            </call>
        </service>

        <service id="unilend.service.client_manager" class="Unilend\Service\ClientManager">
            <argument type="service" id="unilend.service.entity_manager"/>
            <argument type="service" id="unilend.service.client_settings_manager"/>
        </service>

        <service id="unilend.service.lender_manager" class="Unilend\Service\LenderManager">
            <argument type="service" id="unilend.service.entity_manager"/>
        </service>

        <service id="unilend.service.loan_manager" class="Unilend\Service\LoanManager">
            <argument type="service" id="unilend.service.entity_manager"/>
            <call method="setLogger">
                <argument type="service" id="logger" on-invalid="null"/>
            </call>
        </service>

        <service id="unilend.service.notification_manager" class="Unilend\Service\NotificationManager">
            <argument type="service" id="unilend.service.entity_manager"/>
            <argument type="service" id="unilend.service.email_manager"/>
        </service>

        <service id="unilend.service.email_manager" class="Unilend\Service\MailerManager">
            <argument type="service" id="unilend.service.entity_manager"/>
            <argument type="service" id="unilend.swiftmailer.message_provider"/>
            <argument type="service" id="swiftmailer.mailer.default" />
            <argument>%kernel.default_locale%</argument>
            <call method="setLogger">
                <argument type="service" id="logger" on-invalid="null"/>
            </call>
        </service>

        <service id="unilend.service.project_manager" class="Unilend\Service\ProjectManager">
            <argument type="service" id="unilend.service.entity_manager"/>
            <argument type="service" id="unilend.service.bid_manager"/>
            <argument type="service" id="unilend.service.loan_manager"/>
            <argument type="service" id="unilend.service.notification_manager"/>
            <argument type="service" id="unilend.service.autobid_settings_manager"/>
            <argument type="service" id="unilend.service.email_manager"/>
            <argument type="service" id="unilend.service.lender_manager"/>
            <call method="setLogger">
                <argument type="service" id="logger" on-invalid="null"/>
            </call>
        </service>

        <service id="unilend.service.client_settings_manager" class="Unilend\Service\ClientSettingsManager">
            <argument type="service" id="unilend.service.entity_manager"/>
            <argument type="service" id="memcache.default"/>
        </service>

        <service id="unilend.service.irr_manager" class="Unilend\Service\IRRManager">
            <argument type="service" id="unilend.service.entity_manager"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="unilend.service.entity_manager" class="Unilend\Service\Simulator\EntityManager">
            <argument type="service" id="database_connection"/>
        </service>

        <service id="unilend.service.salesforce" class="Unilend\Service\SalesforceManager">
            <argument type="service" id="unilend.service.entity_manager"/>
            <argument>%kernel.root_dir%</argument>
            <argument type="service" id="logger"/>
        </service>
    </services>
</container>