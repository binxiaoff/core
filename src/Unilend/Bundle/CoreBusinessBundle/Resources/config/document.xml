           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Unilend\Bundle\CoreBusinessBundle\Service\Document\LoanContractGenerator" autowire="true">
            <argument key="$protectedPath">%path.protected%</argument>
            <argument key="$staticPath">%path.static%</argument>
            <argument key="$numberFormatter" type="service" id="number_formatter"/>
            <argument key="$currencyFormatter" type="service" id="currency_formatter"/>
        </service>
    </services>
</container>
