<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="unilend.service.translations" class="Unilend\Bundle\TranslationBundle\Service\TranslationManager">
            <argument type="service" id="unilend.service.entity_manager"/>
            <argument type="service" id="unilend.service.translation_loader" />
            <argument>%kernel.default_locale%</argument>
        </service>

        <service id="unilend.service.translation_loader" class="Unilend\Bundle\TranslationBundle\Service\TranslationLoader">
            <argument type="service" id="unilend.service.entity_manager"/>
            <argument>%kernel.default_locale%</argument>
            <tag name="translation.loader" alias="db" />
        </service>
    </services>

</container>
