{% if constant('\\Unilend\\Entity\\ProjectsStatus::STATUS_LOST') == project.status %}
    <div class="row">
        <div class="col-lg-12">
            <div id="fees" class="block">
                <div class="block-header">
                    <h3 class="block-title">Frais</h3>
                </div>
                <div class="block-content block-content-full">
                    {% if projectCharges|length > 0 %}
                        <table class="table table-bordered table-hover table-header-bg">
                            <thead>
                            <tr>
                                <th style="width: 20%">
                                    Date
                                </th>
                                <th style="width: 20%">
                                    Type
                                </th>
                                <th style="width: 20%">
                                    Montant TTC
                                </th>
                                <th style="width: 20%">
                                    Montant TVA
                                </th>
                                <th style="width: 20%">
                                    Régularisé par réception
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for projectCharge in projectCharges %}
                                <tr>
                                    <td>
                                        {{ projectCharge.invoiceDate|localizeddate('short', 'none') }}
                                    </td>
                                    <td>
                                        {{ ('project-charge-type_' ~ projectCharge.idType.label|replace({'_': '-'}))|trans }}
                                    </td>
                                    <td class="text-right">
                                        {{ projectCharge.amountInclVat|localizedcurrency('EUR') }}
                                    </td>
                                    <td class="text-right">
                                        {{ projectCharge.amountVat|localizedcurrency('EUR') }}
                                    </td>
                                    <td>
                                        {% if projectCharge.repaymentDate %}
                                            {{ projectCharge.repaymentDate|localizeddate('short', 'none') }}
                                        {% else %}
                                            Non régularisé
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="alert">
                            <p>Aucuns frais saisis sur ce projet.</p>
                        </div>
                    {% endif %}
                    <div class="text-right">
                        <a role="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-additional-fees">Ajouter des frais</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}
