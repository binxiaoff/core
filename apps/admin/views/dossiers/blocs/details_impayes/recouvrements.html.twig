<div class="block-content block-content-full">
    <h3 class="h4 push-20">Missions de revouvrement</h3>
    {% if debtCollectionMissionsData|length > 0 %}
        <table class="table table-bordered table-hover table-header-bg">
            <thead>
            <tr>
                <th style="width: 10%">
                    Date
                </th>
                <th style="width: 5%">
                    ID
                </th>
                <th style="width: 5%">
                    Statut
                </th>
                <th style="width: 7.5%">
                    Recouvreur
                </th>
                <th style="width: 55%">
                    Composition
                </th>
                <th style="width: 7.5%">
                    Type
                </th>
                <th style="width: 7.5%">
                    Taux
                </th>
                <th style="width: 2.5%">
                    Action
                </th>
            </tr>
            </thead>
            <tbody>
            {% for mission in debtCollectionMissionsData %}
                <tr>
                    <td>{{ mission.added|localizeddate('short', 'none') }}</td>
                    <td>{{ mission.id }}</td>
                    <td>
                        {% if mission.archived is null %}
                            En cours
                        {% else %}
                            Archivée
                        {% endif %}
                    </td>
                    <td>{{ mission.getIdClientDebtCollector().nom }}</td>
                    <td>
                        {% if null == mission.getIdProject.getCloseOutNettingDate() %}
                            {% for missionPaymentSchedule in mission.getDebtCollectionMissionPaymentSchedules() %}
                                {% set paymentSchedule = missionPaymentSchedule.getIdPaymentSchedule() %}
                                {% set missionPaymentScheduleAmount = missionPaymentSchedule.getCapital()+missionPaymentSchedule.getInterest()+missionPaymentSchedule.getCommissionVatIncl() %}
                                {% set paymentScheduleAmount        = (paymentSchedule.getCapital() + paymentSchedule.getInterets() + paymentSchedule.getCommission() + paymentSchedule.getTva())/100 %}
                                {% set isPartial = '' %}
                                {% if missionPaymentScheduleAmount < paymentScheduleAmount %}
                                    {% set isPartial = '(Partielle)' %}
                                {% endif %}
                                Échéance {{ paymentSchedule.getDateEcheanceEmprunteur()|localizeddate("medium", "none", null, null, "MMMM yyyy") }} {{ isPartial }}
                                (Capital: {{ missionPaymentSchedule.getCapital()|localizedcurrency('EUR') }} - Intérêts: {{ missionPaymentSchedule.getInterest()|localizedcurrency('EUR') }} - Comission TTC: {{ missionPaymentSchedule.getCommissionVatIncl()|localizedcurrency('EUR') }})
                                <br>
                            {% endfor %}
                        {% else %}
                            Capital: {{ mission.getCapital()|localizedcurrency('EUR') }} - Intérêts: {{ mission.getInterest()|localizedcurrency('EUR') }} - Comission TTC: {{ mission.getCommissionVatIncl()|localizedcurrency('EUR') }}
                            <br>
                        {% endif %}
                    </td>
                    <td>
                        {% if mission.type == constant('Unilend\\Bundle\\CoreBusinessBundle\\Entity\\DebtCollectionMission::TYPE_AMICABLE') %}
                            Amiable
                        {% else %}
                            Contentieux
                        {% endif %}
                    </td>
                    <td>{{ mission.getFeesRate()|localizednumber('percent') }}</td>
                    <td class="text-center">
                        <a href="/debt_collection_mission/downloadCreditorDetailsFile/{{ mission.id }}" class="btn btn-xs btn-default push-10-r" data-toggle="tooltip" data-original-title="Télécharger XLS"><i class="fa fa-download"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert">
            <p>Aucune mission en cours sur ce projet.</p>
        </div>
    {% endif %}
</div>
