Highcharts.chart('yoy-production', {
    chart: {
        zoomType: 'xy'
    },
    title: {
        text: 'Émission de la même période {{ 'now'|date('Y') }} vs {{ 'last year'|date('Y') }} (YoY)'
    },
    subtitle: {
        text: 'En K€ + en nombre de dossiers'
    },
    xAxis: [{
        categories: ['Janvier', 'Févier', 'Mars', 'Avril', 'Mai', 'Juin', 'Juillet', 'Août', 'Septembre', 'Octobre', 'Novembre', 'Décembre'],
        crosshair: true
    }],
    yAxis: [{ // Primary yAxis
        title: {
            text: 'Montant en K€'
        },
        labels: {
            format: '{value} K€'
        }
    }, { // Secondary yAxis
        title: {
            text: 'Nombre'
        },
        opposite: true
    }],
    tooltip: {
        shared: true
    },
    legend: {
        layout: 'vertical',
        align: 'left',
        x: 120,
        verticalAlign: 'top',
        y: 100,
        floating: true
    },
    series: [{
        name: 'Montant {{ 'last year'|date('Y') }}',
        type: 'spline',
        data: [{% for monthData in releasedProjectsLastYear %} {% if not loop.first %},{% endif %} {{ monthData.amount / 1000 }} {% endfor %}],
        tooltip: {
            valueSuffix: 'K€'
        }
    }, {
        name: 'Montant {{ 'now'|date('Y') }}',
        type: 'spline',
        data: [{% for monthData in releasedProjectsThisYear %} {% if not loop.first %},{% endif %} {{ monthData.amount / 1000 }} {% endfor %}],
        tooltip: {
            valueSuffix: 'K€'
        }
    }, {
        name: 'Nombre {{ 'last year'|date('Y') }}',
        type: 'column',
        yAxis: 1,
        data: [{% for monthData in releasedProjectsLastYear %} {% if not loop.first %},{% endif %} {{ monthData.number }} {% endfor %}]
    },{
        name: 'Nombre {{ 'now'|date('Y') }}',
        type: 'column',
        yAxis: 1,
        data: [{% for monthData in releasedProjectsThisYear %} {% if not loop.first %},{% endif %} {{ monthData.number }} {% endfor %}]
    }]
});
