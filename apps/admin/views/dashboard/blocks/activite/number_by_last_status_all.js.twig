Highcharts.chart('number-by-last-status-all', {
    chart: {
        type: 'column'
    },
    title: {
        text: 'Projets en cours'
    },
    subtitle: {
        text: 'Nombre de projets par statut'
    },
    xAxis: {
        categories: [
            'Tous les projets',
            'Partenaires',
            'Tr√©sorerie',
            'Reprise de FdC'
        ],
        crosshair: true
    },
    yAxis: {
        min: 0,
        title: {
            text: 'Nombre de projets'
        },
        stackLabels: {
          enabled: true,
          style: {
            fontWeight: 'bold',
            color: (Highcharts.theme && Highcharts.theme.textColor) || 'gray'
          }
        }
    },
    legend: {
        align: 'right',
        x: -30,
        verticalAlign: 'top',
        y: 25,
        floating: true,
        backgroundColor: (Highcharts.theme && Highcharts.theme.background2) || 'white',
        borderColor: '#CCC',
        borderWidth: 1,
        shadow: false
    },
    tooltip: {
        headerFormat: '<b>{point.x}</b><br/>',
        pointFormat: '{series.name}: {point.y}<br/>Total: {point.stackTotal}'
    },
    plotOptions: {
        column: {
            stacking: 'normal',
            dataLabels: {
                enabled: true,
                color: (Highcharts.theme && Highcharts.theme.dataLabelsColor) || 'white'
            }
        }
    },
    series: [
        {% for status in countableStatus %}
        {% if not loop.first %},{% endif %}
        {
            name: '{{ status.label }}',
            data: [
                {% if statusAllCount[status.status]['number'] is defined %} {{ statusAllCount[status.status]['number'] }} {% else %} 0 {% endif %},
                {% if statusCashFlowCount[status.status]['number'] is defined %} {{ statusCashFlowCount[status.status]['number'] }} {% else %} 0 {% endif %},
                {% if statusAcquisitionCount[status.status]['number'] is defined %} {{ statusAcquisitionCount[status.status]['number'] }} {% else %} 0 {% endif %},
                {% if statusPartnerCount[status.status]['number'] is defined %} {{ statusPartnerCount[status.status]['number'] }} {% else %} 0 {% endif %}
            ]
        }
        {% endfor %}
    ]
});
