<script src="https://cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.1.0/cookieconsent.min.js"></script>
<script>
    window.addEventListener("load", function(){
        window.cookieconsent.initialise({
            "palette": {
                "popup": {
                    "background": "#efefef",
                    "text": "#302a32"
                },
                "button": {
                    "background": "#2bc9af",
                    "text": "#ffffff"
                }
            },
            "position": "top",
            "content": {
                "message": "{% trans %} cookie-consent.message {% endtrans %}",
                "dismiss": "{% trans %} cookie-consent.dismiss-button {% endtrans %}",
                "link": "{% trans %} cookie-consent.link-text {% endtrans %}",
                "href": "/politique-confidentialite"
            }
        })});
</script>
