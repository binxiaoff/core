{% block project_tranche_type_row %}
    <div class="row row-multi-col-computer">
        <div class="col-lg-6 col-md-6">
            {{ form_row(form.name) }}
        </div>
        <div class="col-lg-6 col-md-6">
            {{ form_row(form.repaymentType) }}
        </div>
    </div>
    <div class="row row-multi-col-computer">
        <div class="col-lg-3 col-md-3">
            {{ form_row(form.money.amount) }}
        </div>
        <div class="col-lg-3 col-md-3">
            {{ form_row(form.money.currency) }}
        </div>
        <div class="col-lg-3 col-md-3">
            {{ form_row(form.rate.indexType) }}
        </div>
        <div class="col-lg-3 col-md-3">
            {{ form_row(form.rate.margin) }}
        </div>
    </div>
    <div class="row row-multi-col-computer">
        <div class="col-lg-4 col-md-4">
            {{ form_row(form.duration) }}
        </div>
        <div class="col-lg-4 col-md-4">
            {{ form_row(form.capitalPeriodicity) }}
        </div>
        <div class="col-lg-4 col-md-4">
            {{ form_row(form.interestPeriodicity) }}
        </div>
    </div>
    <div class="row row-multi-col-computer">
        <div class="col-lg-6 col-md-6">
            {{ form_row(form.expectedReleasingDate) }}
        </div>
        <div class="col-lg-6 col-md-6">
            {{ form_row(form.expectedStartingDate) }}
        </div>
    </div>
{% endblock project_tranche_type_row %}

{% block project_tranche_collection_row %}
    {% spaceless %}
        {% if prototype is defined %}
            {% set prototype_markup = form_row(prototype) %}
            {% set data_prototype_name = form.vars.form.vars.prototype.vars.name|default('__name_product_item_type_config___') %}
            {% set attrs = form.vars.attr|merge({
                'data-prototype': prototype_markup,
                'data-prototype-name': data_prototype_name
            })|merge(attr) %}
        {% endif %}
        {% set attrs = attrs|merge({ 'class': (attrs.class|default('') ~ ' tranches')|trim }) %}
        <div {% for attrname,attrvalue in attrs %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>
        {{ block('form_widget') }}
        </div>
    {% endspaceless %}
{% endblock project_tranche_collection_row %}
