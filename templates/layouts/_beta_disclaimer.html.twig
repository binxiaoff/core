<script src="//cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>
<script>
    $(function () {
        let $modal = $('#beta-disclaimer-modal')

        $(document).on('ready UI:visible', function () {
            let betaDisclaimer = Cookies.get('betaDisclaimer')

            if ($modal.length && undefined === betaDisclaimer) {
                $modal.uiModal('open')
            }
        })

        $modal.on('Modal:confirmed', function () {
            Cookies.set('betaDisclaimer', 'true', {expires: 365})
        })
    })
</script>
