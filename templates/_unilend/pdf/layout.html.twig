<!DOCTYPE html>
<html lang="{{ app.request.locale|default('fr_FR') }}" class="no-js">
<head>
    {% block cssFiles %}
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Cabin:400,700,400" media="all">
        <link rel="stylesheet" href="{{ absolute_url(asset('css/screen.css', 'gulp')) }}"/>
        <style>
            /* Adjust common styles */
            .pdf-layout .logo {
                margin: 0 0 1.25rem;
            }
            .pdf-layout h1 {
                font-size: 1.5rem;
            }
            .pdf-layout h2 {
                font-size: 1.125rem;
            }
            .pdf-layout h3 {
                font-size: 1rem;
            }
            .pdf-layout h4, .pdf-layout h5 {
                font-size: 0.875rem;
            }
            .pdf-layout header {
                text-align: center;
            }
            .pdf-layout header > h1 {
                font-size: 1.5rem;
                margin: 0;
            }
            .pdf-layout header > .subtite {
                color: #2bc9af;
                font-weight: 400;
                line-height: 0.875rem;
            }
            .pdf-layout p, .pdf-layout ul li {
                margin: 0 0 1.25rem;
                font-size: 0.875rem;
                line-height: 1.25rem;
            }
            .pdf-layout .spacer {
                height: 0.75rem;
            }
            .pdf-layout .spacer-size-2 {
                height: 1.5rem;
            }
            .pdf-layout .spacer-size-3 {
                height: 2.25rem;
            }
            .pdf-layout .spacer-size-4 {
                height: 3rem;
            }
            .pdf-layout .spacer-size-5 {
                height: 3.75rem;
            }
            .pdf-layout .spacer-size-6 {
                height: 4.5rem;
            }
            .pdf-layout .spacer-size-7 {
                height: 5.25rem;
            }
            .pdf-layout .spacer-size-8 {
                height: 6rem;
            }
            .pdf-layout .table {
                border: 0;
            }
            .pdf-layout .table thead th, .pdf-layout .table tbody td {
                padding-left: 10px;
                padding-right: 10px;
                line-height: 0.875rem;
            }
            .pdf-layout .table thead th:first-child, .pdf-layout .table tbody td:first-child {
                padding-left: 30px;
            }
            .pdf-layout .table thead th:last-child, .pdf-layout .table tbody td:last-child {
                padding-right: 30px;
            }
            .pdf-layout .table thead th {
                padding-top: 12.5px;
                padding-bottom: 12.5px;
            }
            .pdf-layout .table tbody td {
                font-size: 0.875rem;
            }
            .pdf-layout .table tbody tr.bg-bg3 {
                background-color: #f8f6f8;
            }
            .pdf-layout .table tbody .details td {
                font-size: 0.775rem;
                line-height: 0.775rem;
                padding-top: 5px;
                padding-bottom: 5px;
            }
            .pdf-layout .table tbody .details td:first-child {
                padding-left: 45px;
            }
            .pdf-layout .table tbody .details.last td {
                padding-bottom: 12px;
            }
        </style>
    {% endblock %}
    <meta name="theme-color" content="#ffffff">
    <meta charset="UTF-8">
</head>
<body class="pdf-layout">
<div id="top" class="site">
    {% block header %}
        <div class="logo">
            <img src="{{ asset('images/logo/logo-and-type-avec-baseline-245x52@2x.png', 'gulp') }}" width="245" height="52">
        </div><!-- /.header -->
    {% endblock %}
    <div class="page-content">
        {% block content %} {% endblock %}
    </div><!-- /.page-content -->
</div>
</body>
</html>
