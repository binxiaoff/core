{% if app.user.isGrantedLenderDeposit() and app.user.isGrantedLenderWithdraw() %}
    <div class="dashboard-tabs-nav">
        <ul class="nav nav-dashboard-tabs">
            <li role="presentation"{% if app.request.attributes.get('_route') in ['lender_wallet_deposit', 'lender_wallet_deposit_result', 'lender_wallet_deposit_result_error'] %} class="active"{% endif %}>
                <a href="{{ path('lender_wallet_deposit') }}">{% trans %} lender-wallet_deposit {% endtrans %}</a>
            </li>
            <li role="presentation"{% if app.request.attributes.get('_route') == 'lender_wallet_withdrawal' %} class="active"{% endif %}>
                <a href="{{ path('lender_wallet_withdrawal') }}">{% trans %} lender-wallet_withdrawal {% endtrans %}</a>
            </li>
        </ul>
    </div><!-- /.dashboard-tabs-nav -->
{% endif %}
