<header class="modal-header">
    <h2 class="modal-title">{% trans %} tos-popup.title {% endtrans %}</h2>
</header><!-- /.modal-header -->

<div class="modal-body">
    <div class="row">{{ serviceTermsDetails|raw }}</div>
    <hr />
</div><!-- /.modal-body -->

<footer class="modal-footer">
    <div id="accept-tos" class="form-field form-field-single-checkbox">
        <label>
            <input type="checkbox" name="terms" value="true">
            <span class="label">{% trans %} tos-popup.confirm-check-box-label {% endtrans %}</span>
        </label>
    </div>
    <button type="submit" class="btn-primary btn-shape-md" data-modal-doactionconfirm>{% trans %} common.confirmation-button-label {% endtrans %}<span class="icon fa-angle-r"></span></button>
</footer><!-- /.modal-footer -->
