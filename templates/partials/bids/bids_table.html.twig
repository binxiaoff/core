<form action="#">
    <table class="table table-projects table-finance" style="table-layout: auto;">
        <thead>
        <tr class="my-offers-bid-row">
            <th>Prêteur</th>
            <th>Montant</th>
            <th>Taux de référence</th>
            <th>Marge</th>
            <th>Flooré à</th>
            {#<th>Commission ponctuelle</th>
            <th>Commission récurrente</th>#}
            {% if is_granted('manage_bids', project) and displayAction == true %}
                <th style="width: 115px;">&nbsp;</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for offer in bids %}
            <tr>
                <td>{{ offer.wallet.idClient.company.name }}</td>
                <td>{{ offer.money.amount|localizedcurrencywithprecision(0, offer.money.currency) }}</td>
                <td>{{ ('interest-rate-index_' ~ offer.rate.indexType)|trans }}</td>
                <td>{{ offer.rate.margin|localizednumberwithprecision(2) }}&nbsp;%</td>
                <td>{% if offer.rate.floor is same as(null) %}non défini{% else %}{{ offer.rate.floor|localizednumberwithprecision(2)|default('non défini') }}&nbsp;%{% endif %}</td>
                {#<td>{{ offer.oneTimeFeeTotalRate|localizednumberwithprecision(2) }}&nbsp;%</td>
                <td data-toggle="tooltip" title="{% if offer.recurringFeeTotalRate > 0 %}soit {{ (offer.recurringFeeTotalRate * (offer.amount / 100) / 100)|localizednumber }}&nbsp;€{% endif %}">
                    {{ offer.recurringFeeTotalRate|localizednumberwithprecision(2) }}&nbsp;%
                </td>#}
                {% if is_granted('manage_bids', project) and displayAction == true %}
                    <td>
                        <button type="button" class="btn-default btn-shape-xxs"
                                data-toggle="tooltip" title="Rejeter l‘offre"
                                data-action="refuse-bid" data-bid-id="{{ offer.idBid }}"
                                data-spinnerbutton>
                            <span class="icon fa-rejected-u16"></span>
                        </button>
                        <button type="button" class="btn-primary btn-shape-xxs"
                                data-toggle="tooltip" title="Valider l‘offre"
                                data-action="accept-bid" data-bid-id="{{ offer.idBid }}"
                                data-spinnerbutton>
                            <span class="icon fa-check-u16"></span>
                        </button>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table><!-- /.table-myoffers -->
</form>
