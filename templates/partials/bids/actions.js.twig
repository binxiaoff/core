$(document).on('click', `[data-action="accept-bid"]`, function () {
    var bidId = $(this).data('bid-id')
    $.ajax({
        url: '{{ path('edit_bid_status') }}',
        method: 'POST',
        data: {bid: bidId, status: {{ constant('Unilend\\Entity\\Bids::STATUS_ACCEPTED') }}}
    }).done(function () {
        window.location.reload(false);
    })
})


$(document).on('click', `[data-action="refuse-bid"]`, function () {
    var bidId = $(this).data('bid-id')
    $.ajax({
        url: '{{ path('edit_bid_status') }}',
        method: 'POST',
        data: {bid: bidId, status: {{ constant('Unilend\\Entity\\Bids::STATUS_REJECTED') }}}
    }).done(function () {
        window.location.reload(false);
    })
})
