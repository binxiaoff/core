{% extends 'layouts/_layout.html.twig' %}

{% block siteContent %}
    <article id="homeacq" class="page">
        <section id="homeacq-section-statistics" class="page-section">
            <div class="site-wrap">
                <h1 class="h1">Crédit Agricole Lending Services</h1>

                <div class="promo-swiper swiper-container">
                    <div class="row swiper-wrapper">
                        <div class="col-lg-4 col-md-4 swiper-slide">
                            <div class="promo">
                                <div class="promo-image">
                                    {{ svgimage('#promo-projects', '', 190, 190, 'none') | raw }}
                                </div>
                                <h3 class="promo-highlight">
                                    <span class="ui-text-count" data-start-count="0" data-end-count="51" data-total-time="3000" data-round-float="round" data-tween-count="easeOutCirc">51</span>
                                </h3>
                                <p>Type de contrats</p>
                            </div><!-- /.promo -->
                        </div>

                        <div class="col-lg-4 col-md-4 swiper-slide">
                            <div class="promo">
                                <div class="promo-image">
                                    {{ svgimage('#promo-money', '', 190, 190, 'none') | raw }}
                                </div>
                                <h3 class="promo-highlight">
                                    <span class="ui-text-count" data-start-count="0" data-end-count="50000000" data-total-time="3000" data-round-float="round" data-tween-count="easeOutCirc">50 000 000</span>
                                    €
                                </h3>
                                <p>échangés sur la plateforme</p>
                            </div><!-- /.promo -->
                        </div>

                        <div class="col-lg-4 col-md-4 swiper-slide">
                            <div class="promo">
                                <div class="promo-image">
                                    {{ svgimage('#promo-people', '', 190, 190, 'none') | raw }}
                                </div>
                                <h3 class="promo-highlight">
                                    <span class="ui-text-count" data-start-count="0" data-end-count="255" data-total-time="3000" data-round-float="round" data-tween-count="easeOutCirc">255</span>
                                </h3>
                                <p>Collaborateurs</p>
                            </div><!-- /.promo -->
                        </div>
                    </div><!-- /.row -->
                </div><!-- /.promo-swiper -->
            </div><!-- /.site-wrap -->
        </section><!-- /.promos -->

        <section id="homeacq-section-join" class="page-section bg-bg3">
            <div class="site-wrap">
                <h2 class="h2">Les avantages de CALS</h2>
                <div class="cta-cards">
                    <div class="row">
                        <div class="col-lg-5 push-lg-1 col-md-5 push-md-1">
                            <div class="card card-preter">
                                <h4><strong>Plus de 15 000 prêteurs</strong></h4>
                                <div class="card-text">
                                    <ul class="list-checked">Rejoignez la plus grande communauté de France</ul>
                                </div><!-- /.card-text -->
                                <a href="{{ path('lender_subscription_personal_information') }}" class="btn-primary btn-shape-md">Devenir prêteur</a>
                            </div><!-- /.card -->
                        </div>
                        <div class="col-lg-5 col-md-5">
                            <div class="card card-emprunter">
                                <h4>Des milliers d'emprunteurs en France</h4>
                                <div class="card-text">
                                    <ul class="list-checked">Vous souhaitez entreprendre ?</ul>
                                </div><!-- /.card-text -->
                                <a href="{{ path('home_borrower') }}#homeemp-section-esim" class="btn-alternate btn-shape-md">Déposer un projet</a>
                            </div><!-- /.card -->
                        </div>
                    </div><!-- .row -->
                </div><!-- /.cta-cards -->
            </div><!-- /.site-wrap -->
        </section><!-- /.page-section -->

        {% include 'partials/scroll_more.html.twig' %}
    </article><!-- /.page -->
{% endblock %}
