<section id="profile-correspondence-view" role="tabpanel" class="profile-correspondence-view collapse in">
    <button data-target="#profile-correspondence-edit" role="button" data-toggle="collapse" data-parent="#profile-correspondence-section" class="btn-edit">
        <span class="icon fa-pencil-u32"></span>
        <span class="label">{% trans %} lender-profile_information-tab-identity-section-modify-button {% endtrans %}</span>
    </button>
    <div class="profile-correspondence-is-same collapse in">
        <span class="icon fa-check-u32"></span>{% trans %} lender-address-form_same-address-checkbox {% endtrans %}
    </div>
    <dl class="profile-correspondence-not-same list-2col collapse">
        <dt>{% trans %} lender-profile_information-tab-postal-address-section-address-label {% endtrans %}</dt>
        <dd id="profile-correspondence-street-output">{{ companyPostalAddress.address|default('') }}</dd>
        <dt>{% trans %} lender-profile_information-tab-postal-address-section-zip-label {% endtrans %}</dt>
        <dd id="profile-correspondence-code-output">{{ companyPostalAddress.zip|default('')}}</dd>
        <dt>{% trans %} lender-profile_information-tab-postal-address-section-city-label {% endtrans %}</dt>
        <dd id="profile-correspondence-ville-output">{{ companyPostalAddress.city|default('') }}</dd>
        <dt>{% trans %} lender-profile_information-tab-postal-address-section-country-label {% endtrans %}</dt>
        <dd id="profile-correspondence-pays-output">{{ companyPostalAddress.idCountry.idPays|default(1)|countryLabel }}</dd>
    </dl>
</section><!-- /.profile-correspondence-view -->

<section id="profile-correspondence-edit" role="tabpanel" class="profile-correspondence-edit collapse">
    {{ form_start(forms.postalAddress, {
        'id': 'form-profile-correspondence-edit',
        'attr': {
            'class': 'form-profile form-profile-correspondence-edit',
            'data-formvalidation data-formvalidation-notificationselem': '#form-profile-correspondence-notifications'
        }
    }) }}
     <div class="row">
            <div class="form-field form-field-single-checkbox">
                <label>
                    {{ form_widget(forms.postalAddress.samePostalAddress, {'id' : 'correspondence-is-same', 'required' : false}) }}
                    <span class="label">{% trans %} lender-address-form_same-address-checkbox {% endtrans %}</span>
                </label>
            </div><!-- /.form-field -->
        </div>
        <div class="profile-correspondence-not-same collapse in">
            <div class="row">
                <div class="form-field{% if forms.postalAddress.address.vars.errors|length > 0 %} ui-formvalidation-error {% endif %}">
                    <label for="form-profile-correspondence-street">{% trans %} lender-profile_information-tab-postal-address-section-address-label {% endtrans %}
                        <span class="field-required">*<span class="sr-only"> {% trans %} common_mandatory-field {% endtrans %}</span></span>
                    </label>
                    {{ form_widget(forms.postalAddress.address, {
                        'id': 'form-profile-correspondence-street',
                        'required': false,
                        'attr': {
                            'class': 'input-field',
                            'data-formvalidation-input data-formvalidation-required': 'true'
                        }
                    }) }}
                    {{ form_errors(forms.postalAddress.address) }}
                </div><!-- /.form-field -->
            </div>

            <div class="row row-multi-col-computer">
                <div class="form-field col-lg-6 col-md-6{% if forms.postalAddress.zip.vars.errors|length > 0 %} ui-formvalidation-error {% endif %}">
                    <label for="form-profile-correspondence-code">{% trans %} lender-profile_information-tab-postal-address-section-zip-label {% endtrans %}
                        <span class="field-required">*<span class="sr-only"> {% trans %} common_mandatory-field {% endtrans %}</span></span>
                    </label>
                    <div class="input-group set-right">
                        {{ form_widget(forms.postalAddress.zip, {
                            'id': 'form-profile-correspondence-code',
                            'attr': {
                                'class': 'input-field',
                                'data-formvalidation-input data-formvalidation-required': 'true',
                                'data-autocomplete-address data-autocomplete-ajaxurl': path('lender_profile_ajax_zip'),
                                'data-autocomplete-address-countryelem': '#form-profile-correspondence-pays',
                                'data-autocomplete-address-cityelem': '#form-profile-correspondence-ville',
                                'data-autocomplete-address-zipelem': '#form-profile-correspondence-code',
                                'data-has-spinner': '#spinner-profile-correspondence-code'
                            }
                        }) }}
                        {{ form_errors(forms.postalAddress.zip) }}
                        <div class="btn-group">
                            <span id="spinner-profile-correspondence-code" class="ui-is-spinner"><span class="sr-only">{% trans %} common_loading {% endtrans %}</span></span>
                        </div>
                    </div><!-- /.input-group -->
                </div><!-- /.form-field -->
                <div class="form-field col-lg-6 col-md-6{% if forms.postalAddress.city.vars.errors|length > 0 %} ui-formvalidation-error {% endif %}">
                    <label for="form-profile-correspondence-ville">{% trans %} lender-profile_information-tab-postal-address-section-city-label {% endtrans %}
                        <span class="field-required">*<span class="sr-only">{% trans %} common_mandatory-field {% endtrans %}</span></span>
                    </label>
                    <div class="input-group set-right">
                        {{ form_widget(forms.postalAddress.city, {
                            'id': 'form-profile-correspondence-ville',
                            'required': false,
                            'attr': {
                                'class': 'input-field',
                                'data-formvalidation-input data-formvalidation-required': 'true',
                                'data-autocomplete-address data-autocomplete-ajaxurl': path('lender_profile_ajax_zip'),
                                'data-autocomplete-address-countryelem': '#form-profile-correspondence-pays',
                                'data-autocomplete-address-cityelem': '#form-profile-correspondence-ville',
                                'data-autocomplete-address-zipelem': '#form-profile-correspondence-code',
                                'data-has-spinner': '#spinner-profile-correspondence-city'
                            }
                        }) }}
                        {{ form_errors(forms.postalAddress.city) }}
                        <div class="btn-group">
                            <span id="spinner-profile-correspondence-city" class="ui-is-spinner"><span class="sr-only">{% trans %} common_loading {% endtrans %}</span></span>
                        </div>
                    </div>
                </div><!-- /.form-field -->
            </div>

            <div class="row row-multi-col-computer">
                <div class="form-field col-lg-6 col-md-6{% if forms.postalAddress.idCountry.vars.errors|length > 0 %} ui-formvalidation-error {% endif %}">
                    <label for="form-profile-correspondence-pays">{% trans %} lender-profile_information-tab-postal-address-section-country-label {% endtrans %} <span class="field-required">*<span class="sr-only">{% trans %} common_mandatory-field {% endtrans %}</span></span>
                    </label>
                    {{ form_widget(forms.postalAddress.idCountry, {
                        'id': 'form-profile-correspondence-pays',
                        'required': false,
                        'attr': {
                            'class': 'input-field',
                            'data-formvalidation-input data-formvalidation-required': 'true'
                        }
                    }) }}
                    {{ form_errors(forms.postalAddress.idCountry) }}
                </div><!-- /.form-field -->
            </div>
        </div>

        <input type="hidden" name="postal_address_form" value="true" />
        <div class="btn-controls">
            <button class="btn-primary" data-spinnerbutton>{% trans %} lender-profile_information-tab-identity-save-modifications-button {% endtrans %}</button>
            <button type="reset" role="button" data-toggle="collapse" data-target="#profile-correspondence-view" data-parent="#profile-correspondence-section" class="btn-default" aria-controls="#profile-correspondence-view" aria-expanded="true">{% trans %} lender-profile_information-tab-identity-cancel-modifications-button {% endtrans %}</button>
        </div><!-- /.btn-controls -->
    {{ form_end(forms.postalAddress) }}
</section><!-- /.profile-correspondence-edit -->
