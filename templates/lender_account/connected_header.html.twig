{% set bodyClassNames = 'layout-dashboard' %}

<header class="site-header site-header-dashboard">
    <div class="site-band"></div>

    <div class="site-header-inner">
        <div class="site-wrap">
            <h1 class="site-title">
                <a href="{{ path('home') }}" class="site-logo" tabindex="2">{{ site.title|default('Unilend') }}</a>
            </h1>

            {% block siteHeaderNav %}
                {% include 'partials/header_nav.html.twig' %}
            {% endblock siteHeaderNav %}

            <div class="site-controls">
                {% block siteHeaderControls %}
                    {% include 'partials/site_search.html.twig' %}

                    <div class="site-user">
                        {% if app.user.isGrantedLenderDeposit() %}
                            <a href="{{ path('lender_wallet_deposit') }}" class="site-user-balance">
                                <span class="label">{% trans %} header-connected_add-money-link {% endtrans %}</span>
                            </a><!-- /.site-user-balance -->
                        {% endif %}

                        <div class="site-user-profile">
                            <div class="profile-avatar">
                                <a href="{{ path('lender_dashboard') }}">
                                    {{ app.user.initials }}
                                </a>
                            </div><!-- /.profile-avatar -->

                            {% if app.user.isGrantedLenderRead() and lenderNotifications(app.user)|length > 0 %}
                                <a href="javascript:;" class="profile-notifications" data-usernotificationsdrop>
                                    <span data-usernotifications-unreadcount></span>
                                </a><!-- /.profile-notifications -->
                            {% endif %}

                            <div class="profile-name"><a href="{{ path('lender_dashboard') }}" class="c-t1">{% trans with {'%firstName%' : app.user.getPrenom()} %} header-connected_greeting {% endtrans %}</a></div>

                            <div class="profile-balance">
                                <a href="{{ path('lender_wallet_deposit') }}">{% trans with {'%balance%' : walletBalance(app.user)|localizedcurrency('EUR')} %} header-connected_balance {% endtrans %}</a>
                            </div><!-- /.profile-balance -->

                            <a href="{{ path('logout') }}" class="profile-logout link"><span class="label">{{ 'lender-header_logout'|trans }}</span></a>

                            <a href="{{ path('lender_dashboard') }}" class="site-user-mobile-menu-toggle" data-site-user-menu-toggle>
                                <span class="icon fa-ellipsis-v"></span>
                                <span class="sr-only">Ouvrir le menu</span>
                            </a>

                        </div><!-- /.site-user-profile -->
                    </div><!-- /.site-user -->
                {% endblock %}
            </div><!-- /.site-controls -->
        </div><!-- /.site-wrap -->
    </div><!-- /.site-header-inner -->
</header>
