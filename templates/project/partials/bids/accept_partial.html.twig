<div id="bid-edition-dialog" data-modal data-modal-minwidth="500" style="padding: 10px;">
    {{ form_start(partialBidForm) }}
        <div class="modal-header">
            <h3 class="dialog-title">{% trans %} bids.modal-partial-title {% endtrans %}</h3>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <label for="bid_partial_amount">
                        {% trans %} bids.modal-partial-amount-label {% endtrans %}
                        <small>{{ 'bids.modal-partial-amount-help'|trans|replace({'#formattedAmountPlaceholder#': '<span class="bid-formatted-amount"></span>'})|raw }}</small>
                    </label>
                </div>
                <div class="input-group set-right col-lg-6 col-md-6">
                    {{ form_widget(partialBidForm.amount, {attr: {class: 'amount'}}) }}
                    <div class="btn-group bid-currency"></div>
                </div>
            </div>
        </div>
        <footer class="modal-footer">
            <a href="javascript:;" class="btn-default btn-shape-xs" data-modal-doactioncancel>{% trans %} bids.modal-partial-cancel-button {% endtrans %}</a>
            <button type="submit" class="btn-primary btn-shape-xs">{% trans %} bids.modal-partial-submit-button {% endtrans %}</button>
        </footer>
    {{ form_end(partialBidForm) }}
</div><!-- /#bid-edition-dialog -->
