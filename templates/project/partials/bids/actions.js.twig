$(function () {
    $(document).on('click', '[data-bid-action="modify"]', function () {
        var $bid = $(this)
        var $modal = $('#bid-edition-dialog')

        $modal.find('#bid_partial_id').val($bid.attr('data-bid-id'))
        $modal.find('#bid_partial_amount').val($bid.attr('data-bid-amount'))
        $modal.find('.bid-currency').text($bid.attr('data-bid-currency'))
        $modal.find('.bid-formatted-amount').text($bid.attr('data-bid-formattedamount'))
        $modal.uiModal('open')
    })
})
