{% extends 'layouts/_page_with_side_bar.html.twig' %}

{% set page = {
    id: 'demo-project-request-details',
    classNames: ''
} %}

{% block dashboardContent %}
    <section class="dashboard-tabs tabs">
        <h4>
            {{ project.borrowerCompany.name }}
            <small>
                {% if project.isEditable %}
                    <a href="#" id="title" class="editable" data-type="text" data-inputclass="input-field">{{ project.title }}</a>
                {% else %}
                    {{ project.title }}
                {% endif %}
            </small>
            <div class="bubble pull-right">
                {% include 'partials/market_bubble.html.twig' with {'market': project.marketSegment.label} %}
            </div>
        </h4>
        <div class="row dashboard-tab-pane">
            <div id="project-breadcrumb" class="form-project-create-nav tab-nav">
                <div class="{% if project.currentProjectStatusHistory.status > constant('\\Unilend\\Entity\\ProjectStatusHistory::STATUS_REQUESTED') %}complete{% else %}active{% endif %}">Dépôt</div>
                <div class="{% if project.currentProjectStatusHistory.status > constant('\\Unilend\\Entity\\ProjectStatusHistory::STATUS_PUBLISHED') %}complete{% elseif project.currentProjectStatusHistory.status == constant('\\Unilend\\Entity\\ProjectStatusHistory::STATUS_PUBLISHED') %}active{% endif %}">
                    Financement
                </div>
                <div class="{% if project.currentProjectStatusHistory.status > constant('\\Unilend\\Entity\\ProjectStatusHistory::STATUS_FUNDED') %}complete{% elseif project.currentProjectStatusHistory.status == constant('\\Unilend\\Entity\\ProjectStatusHistory::STATUS_FUNDED') %}active{% endif %}">
                    Contractualisation
                </div>
                <div class="{% if project.currentProjectStatusHistory.status > constant('\\Unilend\\Entity\\ProjectStatusHistory::STATUS_CONTRACTS_REDACTED') %}complete{% elseif project.currentProjectStatusHistory.status == constant('\\Unilend\\Entity\\ProjectStatusHistory::STATUS_CONTRACTS_REDACTED') %}active{% endif %}">
                    Signature
                </div>
                <div class="{% if project.currentProjectStatusHistory.status > constant('\\Unilend\\Entity\\ProjectStatusHistory::STATUS_CONTRACTS_SIGNED') %}complete{% elseif project.currentProjectStatusHistory.status == constant('\\Unilend\\Entity\\ProjectStatusHistory::STATUS_CONTRACTS_SIGNED') %}active{% endif %}">
                    Remboursement
                </div>
                <div class="{% if project.currentProjectStatusHistory.status in [constant('\\Unilend\\Entity\\ProjectStatusHistory::STATUS_FINISHED'), constant('\\Unilend\\Entity\\ProjectStatusHistory::STATUS_LOST')] %}complete{% endif %}">
                    Terminé
                </div>
            </div><!-- /.form-project-create-nav -->
        </div>
        <div class="dashboard-tabs-content tab-content">
            <div class="row">
                <article class="dashboard-tab-pane col-lg-8 col-md-8">
                    <div class="panel" data-equal-height>
                        <div class="panel-content">
                            <div class="row columns-with-space margin-10-t">
                                <dl class="col-md-6 col-lg-6">
                                    <dt>Date de dépôt</dt>
                                    <dd>{{ project.added|localizeddate('short', 'short') }}</dd>
                                </dl>
                                <dl class="col-md-6 col-lg-6">
                                    <dt>Date butoir de réponse</dt>
                                    <dd>
                                        {% if project.isEditable %}
                                            <a href="#" id="response-date" class="editable" data-type="text" data-pk="{{ project.id }}" data-inputclass="input-field">
                                                {% if project.replyDeadline %}{{ project.replyDeadline|localizeddate('short', 'none') }}{% endif %}
                                            </a>
                                        {% elseif project.replyDeadline %}
                                            {{ project.replyDeadline|localizeddate('short', 'none') }}
                                        {% else %}
                                            N/A
                                        {% endif %}
                                    </dd>
                                </dl>
                            </div>
                            <div class="row columns-with-space margin-10-t">
                                <dl class="col-md-6 col-lg-6">
                                    <dt>Date de closing envisagée</dt>
                                    <dd>
                                        {% if project.isEditable %}
                                            <a href="#" id="closing-date" class="editable" data-type="text" data-pk="{{ project.id }}" data-inputclass="input-field">
                                                {% if project.expectedClosingDate %}{{ project.expectedClosingDate|localizeddate('short', 'none') }}{% endif %}
                                            </a>
                                        {% elseif project.expectedClosingDate %}
                                            {{ project.expectedClosingDate|localizeddate('short', 'none') }}
                                        {% else %}
                                            N/A
                                        {% endif %}
                                    </dd>
                                </dl>
                            </div>

                            {#<div class="row margin-10-t">
                                <dt>Ce dossier fait déjà l‘objet d‘une demande de garantie auprès de FONCARIS</dt>
                                <dd>
                                    {% if project.isEditable %}
                                        <a href="#" id="has-guarantee" data-type="checklist" data-value="{{ project.fondsPropresDeclaraClient ? '1' : '' }}"></a>
                                    {% elseif project.fondsPropresDeclaraClient %}
                                        Oui
                                    {% else %}
                                        Non
                                    {% endif %}
                                </dd>
                            </div>#}
                            <h4 class="h4 margin-20-t">
                                Description
                                {% if project.isEditable %}
                                    <a href="#" id="edit-description"><span class="icon fa-edit-u32"></span></a>
                                {% endif %}
                            </h4>
                            <div class="row description-container">
                                <em>
                                    {% if project.isEditable %}
                                        <span href="#" id="description" class="editable" data-type="textarea" data-toggle="manual" data-inputclass="input-field">{{ project.description }}</span>
                                    {% else %}
                                        {{ project.description|nl2br }}
                                    {% endif %}
                                </em>
                            </div>
                        </div><!-- /.panel-content -->
                    </div><!-- /.panel -->
                </article><!-- /.dashboard-tab-pane -->
                <article class="dashboard-tab-pane col-lg-4 col-md-4" style="border-left: solid 2px #eceaed;">
                    <div class="panel" style="position: relative; min-height: 300px;" data-equal-height>
                        <h3 class="margin-10-t">Raccourcis</h3>
                        <div class="panel-content">
                            <ul>
                                <li><a href="#article-scoring">Notation</a></li>
                                {#<li><a href="#article-fees">Frais / commissions</a></li>#}
                                <li><a href="#article-visibility">Visibilité</a></li>
                                {% if project.currentProjectStatusHistory.status >= constant('\\Unilend\\Entity\\ProjectStatusHistory::STATUS_PUBLISHED') %}
                                    <li><a href="#article-bids">Offres de participation</a></li>
                                {% endif %}
                                <li><a href="#article-documents">Documents</a></li>
                                <li><a href="#article-electronic-signature">Signature électronique</a></li>
                                <li><a href="#article-discussions">Discussions</a></li>
                            </ul>
                            <div class="row" style="position: absolute; bottom: 30px; left: 30px; right: 30px;">
                                {% if project.currentProjectStatusHistory.status <= constant('\\Unilend\\Entity\\ProjectStatusHistory::STATUS_FUNDED') %}
                                    <a href="{{ path('edit_project_status_abandon', {'hash': project.hash}) }}" class="btn-default btn-shape-xs margin-10-t" style="width: 100%;">Abandonner le dossier</a>
                                {% endif %}
                                {% if project.currentProjectStatusHistory.status == constant('\\Unilend\\Entity\\ProjectStatusHistory::STATUS_REQUESTED') %}
                                    <a href="{{ path('edit_project_status_publish', {'hash': project.hash}) }}" class="btn-primary btn-shape-xs margin-10-t" style="width: 100%;">Proposer au financement</a>
                                {% endif %}
                                {% if project.currentProjectStatusHistory.status == constant('\\Unilend\\Entity\\ProjectStatusHistory::STATUS_PUBLISHED') %}
                                    <a href="{{ path('edit_project_status_funded', {'hash': project.hash}) }}" class="btn-primary btn-shape-xs margin-10-t" style="width: 100%;">Clôturer la syndication</a>
                                {% endif %}
                                {% if project.currentProjectStatusHistory.status == constant('\\Unilend\\Entity\\ProjectStatusHistory::STATUS_FUNDED') %}
                                    <a href="{{ path('edit_project_status_contracts_redacted', {'hash': project.hash}) }}" class="btn-primary btn-shape-xs margin-10-t" style="width: 100%;">Signer les contrats</a>
                                {% endif %}
                                {% if project.currentProjectStatusHistory.status == constant('\\Unilend\\Entity\\ProjectStatusHistory::STATUS_CONTRACTS_REDACTED') %}
                                    <a href="{{ path('edit_project_status_signed', {'hash': project.hash}) }}" class="btn-primary btn-shape-xs margin-10-t" style="width: 100%;">Commencer le remboursement</a>
                                {% endif %}
                                {% if project.currentProjectStatusHistory.status == constant('\\Unilend\\Entity\\ProjectStatusHistory::STATUS_CONTRACTS_SIGNED') %}
                                    <a href="{{ path('edit_project_status_finished', {'hash': project.hash}) }}" class="btn-primary btn-shape-xs margin-10-t" style="width: 100%;">Mettre fin au
                                        remboursement</a>
                                    <a href="{{ path('edit_project_status_lost', {'hash': project.hash}) }}" class="btn-primary btn-shape-xs margin-10-t" style="width: 100%;">Passer en perte</a>
                                {% endif %}
                            </div>
                        </div><!-- /.panel-content -->
                    </div><!-- /.panel -->
                </article><!-- /.dashboard-tab-pane -->
            </div><!-- /.row -->
            <article class="dashboard-tab-pane">
                <div class="panel">
                    <div class="panel-content">
                        {{ form_start(trancheForm) }}
                        {{ form_row(trancheForm.tranches) }}
                        <div class="text-align-right">
                            <button type="submit" class="btn-primary btn-shape-xs" data-spinnerbutton>Confirmer</button>
                        </div>
                        {{ form_end(trancheForm) }}
                    </div><!-- /.panel-content -->
                </div><!-- /.panel -->
            </article><!-- /.dashboard-tab-pane -->
            <article class="dashboard-tab-pane" id="article-scoring">
                <div class="panel">
                    <fieldset>
                        <h3 class="margin-10-t">Notation</h3>
                        <div class="row row-multi-col-computer scoring">
                            <dl class="col-md-4 col-lg-4">
                                <dt>Arrangeur</dt>
                                <dd>
                                    {% if project.isEditable %}
                                        <a href="#" id="arranger" data-type="select">
                                            {% if project.arranger %}{{ project.arranger.company.name }}{% endif %}
                                        </a>
                                    {% elseif project.arranger %}
                                        {{ project.arranger.company.name }}
                                    {% else %}
                                        N/A
                                    {% endif %}
                                </dd>
                            </dl>
                            <dl class="col-md-4 col-lg-4">
                                <dt>RUN</dt>
                                <dd>
                                    {% if project.isEditable %}
                                        <a href="#" id="run" data-type="select">
                                            {% if project.run %}
                                                {{ project.run.company.name }}
                                            {% endif %}
                                        </a>
                                    {% elseif project.run %}
                                        {{ project.run.company.name }}
                                    {% else %}
                                        N/A
                                    {% endif %}
                                </dd>
                            </dl>
                            <dl class="col-md-4 col-lg-4">
                                <dt>Note</dt>
                                <dd>
                                    {% if project.isEditable(app.user) and is_granted('rate', project) %}
                                        <a href="#" class="editable" id="scoring" data-type="text" data-inputclass="input-field">
                                            {% if project.internalRatingScore is not empty %}
                                                {{ project.internalRatingScore }}
                                            {% endif %}
                                        </a>
                                    {% elseif project.internalRatingScore is not empty %}
                                        {{ project.internalRatingScore }}
                                    {% else %}
                                        N/A
                                    {% endif %}
                                </dd>
                            </dl>
                        </div>
                    </fieldset>
                </div>
            </article><!-- /.dashboard-tab-pane -->
