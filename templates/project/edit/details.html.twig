            line-height: 18px;
            color: #fbf9fb;
            font-size: 13px;
            font-weight: 900;
        }

        dt {
            font-weight: 700;
        }

        dd {
            font-size: 16px;
        }

        #project-breadcrumb {
            text-align: center;
            display: flex;
            margin: 0 0 22px 0;
        }

        #project-breadcrumb div {
            display: block;
            flex: 1;
            float: left;
            height: 40px;
            background: #c5eee4;
            text-align: center;
            padding: 10px 0 0 40px;
            position: relative;
            margin: 0 10px 0 0;
            font-size: 16px;
            text-decoration: none;
            color: #fff;
        }

        #project-breadcrumb div:after {
            content: "";
            border-top: 25px solid transparent;
            border-bottom: 25px solid transparent;
            border-left: 25px solid #c5eee4;
            position: absolute;
            right: -25px;
            top: 0;
            z-index: 1;
