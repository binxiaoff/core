{% extends 'layouts/_layout.html.twig' %}

{% block siteContent %}
    <article{% if page.id is not empty %} id="{{ page.id }}"{% endif %} class="dashboard{% if page.classNames is not empty %} {{ page.classNames }}{% endif %}">
        <div class="dashboard-inner">
            <div class="site-wrap">
                <div class="col-menu">
                    <a href="{{ path('demo_project_request') }}" class="btn-primary btn-shape-xs">
                        <span class="icon fa-plus-u"></span>
                        Déposer un dossier
                    </a>
                    <nav class="dashboard-nav margin-10-t">
                        {% block dashboardNav %}
                            <ul>
                                <li role="presentation" class="{% if app.request.get('_route') in ['wallet', 'demo_project_details'] %} active{% endif %}">
                                    <a href="{{ path('wallet') }}">
                                        <span class="icon fa-list-u"></span>
                                        <span class="label">Portefeuille</span>
                                    </a>
                                </li>
                                <li role="presentation" class="{% if app.request.get('_route') in ['demo_projects_list', 'demo_lender_project_details'] %} active{% endif %}">
                                    <a href="{{ path('demo_projects_list') }}">
                                        <span class="icon fa-exchange-u"></span>
                                        <span class="label">Place de marché</span>
                                    </a>
                                </li>
                                <li role="presentation" class="{% if app.request.get('_route') == 'demo_statistics' %} active{% endif %}">
                                    <a href="{{ path('demo_statistics') }}">
                                        <span class="icon fa-linechart-u"></span>
                                        <span class="label">Reporting</span>
                                    </a>
                                </li>
                                <li role="presentation" class="{% if app.request.get('_route') == 'demo_kyc' %} active{% endif %}">
                                    <a href="{{ path('demo_kyc') }}">
                                        <span class="icon fa-check-u"></span>
                                        <span class="label">KYC</span>
                                    </a>
                                </li>
                                <li role="presentation" class="{% if app.request.get('_route') == 'demo_documents' %} active{% endif %}">
                                    <a href="{{ path('demo_documents') }}">
                                        <span class="icon fa-project-u"></span>
                                        <span class="label">Base documentaire</span>
                                    </a>
                                </li>
                                <li role="presentation" class="{% if app.request.get('_route') == 'demo_notifications' %} active{% endif %}">
                                    <a href="{{ path('demo_notifications') }}">
                                        <span class="icon fa-bell-u"></span>
                                        <span class="label">
                                            Notifications
                                            <span data-usernotifications-unreadcount></span>
                                        </span>
                                    </a>
                                </li>
                                <li role="presentation" class="{% if app.request.get('_route') == 'demo_help' %} active{% endif %}">
                                    <a href="{{ path('demo_help') }}">
                                        <span class="icon fa-question-circle-o"></span>
                                        <span class="label">Aide</span>
                                    </a>
                                </li>
                            </ul>
                        {% endblock %}
                    </nav>
                </div><!-- /.col-menu -->
                <div class="col-content dashboard-content">
                    {% block dashboardContent %} {% endblock %}
                </div><!-- /.col-content -->
            </div><!-- /.site-wrap -->
        </div><!-- /.dashboard-inner -->
    </article><!-- /.dashboard -->
{% endblock %}
