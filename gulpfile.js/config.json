{
  "root": {
    "src": "./app/Resources/assets",
    "dest": "./public/default/assets"
  },

  "tasks": {
    "browserSync": {
      "server": {
        "baseDir": "public"
      }
    },

    "jsDependencies": {
      "src": "js",
      "dest": "js",
      "vendorSrc": "js/vendor",
      "vendorDest": "js/vendor",
      "extensions": ["js", "json"],
      "dependencies": [
        "./app/Resources/assets/js/app/modernizr/modernizr.js",
        "./app/Resources/assets/js/vendor/jquery.js",
        "./app/Resources/assets/js/vendor/swiper/swiper.jquery.js",
        "./app/Resources/assets/js/vendor/jquery.fancybox.js",
        "./app/Resources/assets/js/vendor/jquery.fancybox-media.js",
        "./app/Resources/assets/js/vendor/videojs/video.js",
        "./app/Resources/assets/js/vendor/videojs/Youtube.js",
        "./app/Resources/assets/js/vendor/jquery.caret.js",
        "./app/Resources/assets/js/vendor/jquery.datatables.js"
      ],
      "extractSharedJs": false
    },

    "css": {
      "src": "sass",
      "dest": "css",
      "autoprefixer": {
        "browsers": ["last 2 versions"],
        "cascade": true
      },
      "compass": {
        "css": "./css",
        "sass": "./sass",
        "image": "./images"
      },
      "extensions": ["sass", "scss", "css"]
    },

    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "icon": {
      "src": "icons",
      "dest": "images/svg",
      "extensions": ["svg"]
    },

    "favicons": {
      "src": "favicons",
      "dest": "favicons",
      "extensions": ["png", "svg", "ico", "xml", "json"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "modernizr": {
      "srcCss": "./css",
      "srcJs": "./js",
      "srcExclude" : "./js/*.min.js",
      "dest": "./js/app/modernizr"
    },

    "browserify": {
      "src": "./js/app",
      "bundleConfigs": [
        {
          "entries":    "js/main.dev.js",
          "dest":       "js",
          "outputName": "main.js",
          "extensions": [],
          "debug": true
        }
      ]
    },
    "production" : {
      "rev": true
    }
  }
}
